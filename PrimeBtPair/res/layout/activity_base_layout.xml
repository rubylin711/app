<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rcu_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/bt_pair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/remote_pair"/>

        <ImageView
            android:id="@+id/bt_pairing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/remote_pairing"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/bt_pair_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/remote_pair_success"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/bt_pair_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/remote_paire_fail"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rcu_bg"
        android:visibility="invisible">

        <ImageView      android:id="@+id/bt_controller"
            android:layout_width="320dp"
            android:layout_height="540dp"
            android:src="@drawable/bt_controller"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />

        <ImageView      android:id="@+id/bt_controller_light"
            android:layout_width="320dp"
            android:layout_height="540dp"
            android:src="@drawable/bt_controller_light"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />

        <ImageView      android:id="@+id/bt_controller_highlight"
            android:layout_width="320dp"
            android:layout_height="540dp"
            android:src="@drawable/bt_controller_highlight"
            android:scaleType="fitXY"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription" />

        <ImageView      android:id="@+id/rcu_50cm"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="280dp"
            android:src="@drawable/rcu_50cm"
            android:scaleType="fitXY"
            android:layout_toEndOf="@id/bt_controller"
            android:layout_alignParentBottom="true"
            tools:ignore="ContentDescription" />

        <TextView       android:id="@+id/hint_pair_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/before_pair_hint_1"
            android:textSize="14sp"
            android:visibility="visible"
            android:gravity="center"/>

        <RelativeLayout android:id="@+id/dot_connecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="230dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">
            <LinearLayout   android:id="@+id/dot_connecting_layer"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView      android:id="@+id/dot_connecting_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/dot_connecting"
                    tools:ignore="ContentDescription" />
                <ImageView      android:id="@+id/dot_connecting_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/dot_connecting"
                    tools:ignore="ContentDescription" />
                <ImageView      android:id="@+id/dot_connecting_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/dot_connecting"
                    tools:ignore="ContentDescription" />
                <ImageView      android:id="@+id/dot_connecting_4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/dot_connecting"
                    tools:ignore="ContentDescription" />
                <ImageView      android:id="@+id/dot_connecting_5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/dot_connecting"
                    tools:ignore="ContentDescription" />
                <ImageView      android:id="@+id/dot_connecting_6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/dot_connecting"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <TextView       android:id="@+id/dot_connecting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_alignParentTop="@id/dot_connecting_layer"
                android:layout_centerHorizontal="true"
                android:text="@string/before_pair_hint_2"
                android:textSize="14sp"
                android:textAlignment="center" />
        </RelativeLayout>

        <ImageView      android:id="@+id/tatv8000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/tatv8000"
            android:layout_toEndOf="@id/rcu_50cm"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />

        <RelativeLayout android:id="@+id/status_connected_root"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">
            <ImageView  android:id="@+id/status_connected_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/status_connected"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />
            <TextView   android:id="@+id/status_connected_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="345dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/rcu_pair_complete"
                android:textSize="14sp"
                android:textAlignment="center" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Previous Layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                tools:text="foobar"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="@string/message" />

            <TextView
                android:id="@+id/devicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                tools:text="foobar"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/devicestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                tools:text="foobar"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                tools:text="foobar"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical" >

            <Button
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="#1E90FF" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
