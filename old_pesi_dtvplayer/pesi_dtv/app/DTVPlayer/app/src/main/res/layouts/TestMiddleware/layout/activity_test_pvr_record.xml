<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.prime.dtvplayer.TestMiddleware.TestPVRRecordActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_RIGHT_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_LEFT_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_CENTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_TITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_HELP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />

    <include
        android:id="@+id/ID_TESTPVR_LAYOUT_TITLE"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="@id/ID_TESTPVR_GUIDELINE_TITLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/ID_TESTPVR_LAYOUT_HELP"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ID_TESTPVR_GUIDELINE_HELP" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/ID_TESTPVR_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@id/ID_TESTPVR_GUIDELINE_CENTER"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/ID_TESTPVR_GUIDELINE_LEFT"
        app:layout_constraintTop_toBottomOf="@id/ID_TESTPVR_GUIDELINE_TITLE"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordStart_OnClick"
                android:text=" PvrRecordStart()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordStop_OnClick"
                android:text="PvrRecordStop()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordGetAlreadyRecTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordGetAlreadyRecTime_OnClick"
                android:text="PvrRecordGetAlreadyRecTime()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordGetStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordGetStatus_OnClick"
                android:text="PvrRecordGetStatus()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordGetFileFullPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordGetFileFullPath_OnClick"
                android:text="PvrRecordGetFileFullPath()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordGetProgramId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordGetProgramId_OnClick"
                android:text="PvrRecordGetProgramId()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrGetCurrentPvrMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrGetCurrentPvrMode_OnClick"
                android:text="PvrGetCurrentPvrMode()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordCheck_OnClick"
                android:text="PvrRecordCheck()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordGetAllInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordGetAllInfo_OnClick"
                android:text="PvrRecordGetAllInfo()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordGetMaxRecNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordGetMaxRecNum_OnClick"
                android:text="PvrRecordGetMaxRecNum()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PvrRecordForRecordFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="PvrRecordForRecordFile_OnClick"
                android:text="PvrRecordForRecordFile"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_pvrCheckHardDiskOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="pvrCheckHardDiskOpen_OnClick"
                android:text="pvrCheckHardDiskOpen"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_GetRecordPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="GetRecordPath_OnClick"
                android:text="GetRecordPath"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_SetRecordPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="SetRecordPath_OnClick"
                android:text="SetRecordPath"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

        </LinearLayout>
    </ScrollView>

    <SurfaceView
        android:id="@+id/ID_TESTPVR_SURFACEVIEW_PLAY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ID_TESTPVR_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTPVR_GUIDELINE_RIGHT"
        app:layout_constraintStart_toStartOf="@+id/ID_TESTPVR_GUIDELINE_CENTER"
        app:layout_constraintTop_toTopOf="@+id/ID_TESTPVR_GUIDELINE_TITLE" />

</androidx.constraintlayout.widget.ConstraintLayout>
