<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/DELETERESERVEDIALOG_WIDTH"
    android:layout_height="wrap_content"
    android:background="@drawable/banner">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <ImageView
        android:id="@+id/titleLineIGV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTXV" />

    <TextView
        android:id="@+id/titleTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DELETERESERVEDIALOG_TXV_HEIGHT"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/STR_DELETE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventNameTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DELETERESERVEDIALOG_TXV_HEIGHT"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="@+id/titleTXV"
        app:layout_constraintStart_toStartOf="@+id/titleTXV"
        app:layout_constraintTop_toBottomOf="@+id/titleTXV" />

    <TextView
        android:id="@+id/startTimeTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DELETERESERVEDIALOG_TXV_HEIGHT"
        android:gravity="center_horizontal"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="@+id/eventNameTXV"
        app:layout_constraintStart_toStartOf="@+id/eventNameTXV"
        app:layout_constraintTop_toBottomOf="@+id/eventNameTXV" />

    <TextView
        android:id="@+id/msgTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DELETERESERVEDIALOG_TXV_HEIGHT"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/STR_DO_YOU_WANT_TO_DELETE_THE_RESERVATION"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="@+id/startTimeTXV"
        app:layout_constraintStart_toStartOf="@+id/startTimeTXV"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTXV" />

    <Button
        android:id="@+id/deleteBTN"
        android:layout_width="@dimen/DELETERESERVEDIALOG_BTN_WIDTH"
        android:layout_height="@dimen/DELETERESERVEDIALOG_BTN_HEIGHT"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_DELETE"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/centerGuideline"
        app:layout_constraintTop_toBottomOf="@+id/msgTXV" />

    <Button
        android:id="@+id/cancelBTN"
        android:layout_width="@dimen/DELETERESERVEDIALOG_BTN_WIDTH"
        android:layout_height="@dimen/DELETERESERVEDIALOG_BTN_HEIGHT"
        android:layout_marginStart="16dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_CANCEL"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/centerGuideline"
        app:layout_constraintTop_toTopOf="@+id/deleteBTN" />

    <TextView
        android:id="@+id/bufferTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DELETERESERVEDIALOG_BUFFERTXV_HEIGHT"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/cancelBTN"
        app:layout_constraintStart_toStartOf="@+id/deleteBTN"
        app:layout_constraintTop_toBottomOf="@+id/deleteBTN" />

</androidx.constraintlayout.widget.ConstraintLayout>