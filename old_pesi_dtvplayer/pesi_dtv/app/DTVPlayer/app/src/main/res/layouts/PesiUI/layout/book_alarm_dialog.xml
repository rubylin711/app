<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/BOOKALARMDIALOG_WIDTH"
    android:layout_height="match_parent"
    android:background="@drawable/banner"
    tools:context="com.prime.dtvplayer.View.BookAlarmDialogView">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/titleTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_horizontal"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_TITLE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/titleLineIGV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTXV" />

    <TextView
        android:id="@+id/textClock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLineIGV" />

    <TextView
        android:id="@+id/channelTitleTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_CHANNEL_TITLE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/channelSeparateTXV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textClock" />

    <TextView
        android:id="@+id/channelSeparateTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_SEPARATE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/channelTitleTXV"
        app:layout_constraintEnd_toStartOf="@+id/guidelineItemTitle"
        app:layout_constraintTop_toTopOf="@+id/channelTitleTXV" />

    <TextView
        android:id="@+id/channelTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/channelTitleTXV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineItemTitle" />

    <TextView
        android:id="@+id/evtNameTitleTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_EVENTNAME_TITLE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/evtNameSeparateTXV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channelTitleTXV" />

    <TextView
        android:id="@+id/evtNameSeparateTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_SEPARATE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/evtNameTitleTXV"
        app:layout_constraintEnd_toStartOf="@+id/guidelineItemTitle"
        app:layout_constraintTop_toTopOf="@+id/evtNameTitleTXV" />

    <TextView
        android:id="@+id/evtNameTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/evtNameTitleTXV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineItemTitle" />

    <TextView
        android:id="@+id/startTimeTitleTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_STARTTIME_TITLE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/startTimeSeparateTXV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evtNameTitleTXV" />

    <TextView
        android:id="@+id/startTimeSeparateTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_SEPARATE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/startTimeTitleTXV"
        app:layout_constraintEnd_toStartOf="@+id/guidelineItemTitle"
        app:layout_constraintTop_toTopOf="@+id/startTimeTitleTXV" />

    <TextView
        android:id="@+id/startTimeTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/startTimeTitleTXV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineItemTitle" />

    <TextView
        android:id="@+id/durationTitleTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_BOOK_ALARM_DURATION_TITLE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/durationSeparateTXV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTitleTXV" />

    <TextView
        android:id="@+id/durationSeparateTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/STR_BOOK_ALARM_SEPARATE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/durationTitleTXV"
        app:layout_constraintEnd_toStartOf="@+id/guidelineItemTitle"
        app:layout_constraintTop_toTopOf="@+id/durationTitleTXV" />

    <TextView
        android:id="@+id/durationTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBaseline_toBaselineOf="@+id/durationTitleTXV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineItemTitle" />

    <Button
        android:id="@+id/cancelBTN"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_CANCEL"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/okBTN"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@+id/durationTXV" />

    <Button
        android:id="@+id/okBTN"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_OK"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelBTN"
        app:layout_constraintTop_toBottomOf="@+id/durationTXV" />

</androidx.constraintlayout.widget.ConstraintLayout>