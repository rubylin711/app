<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:drawable="@drawable/focus">
            </item>

            <!--    此為設定右邊圖片    -->
            <item android:right="5dp">
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/selectbox_right_black" />
            </item>

            <!--    此為設定左邊圖片    -->
            <item android:left="5dp">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/selectbox_left_black" />
            </item>
        </layer-list>
    </item>

    <item android:state_focused="false">
        <layer-list>
            <!--
            <item android:drawable="@drawable/n_focus"/>
            -->

            <!--    此為設定右邊圖片    -->
            <item android:right="5dp">
                <bitmap
                    android:gravity="right"
                    android:src="@drawable/selectbox_right_white" />
            </item>

            <!--    此為設定左邊圖片    -->
            <item android:left="5dp">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/selectbox_left_white" />
            </item>
        </layer-list>
    </item>
</selector>