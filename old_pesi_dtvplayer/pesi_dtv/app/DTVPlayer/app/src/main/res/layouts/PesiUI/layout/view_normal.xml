<?xml version="1.0" encoding="utf-8"?>
<com.prime.dtvplayer.View.NormalView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/chChange"
        android:layout_width="@dimen/NORMALVIEW_CHCHANGE_WIDTH"
        android:layout_height="@dimen/NORMALVIEW_CHCHANGE_HEIGHT"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TEXT_SIZE"
        android:background="@drawable/banner"
        android:visibility="invisible"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/mute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintVertical_bias="0.90" />

    <TextView
        android:id="@+id/errorMsg"
        android:layout_width="@dimen/NORMALVIEW_ERRORMSG_WIDTH"
        android:layout_height="@dimen/NORMALVIEW_ERRORMSG_HEIGHT"
        android:background="@drawable/errormsgbackground"
        android:gravity="center_horizontal|center_vertical"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/channelNo"
        android:layout_width="@dimen/NORMALVIEW_CHANNELNO_WIDTH"
        android:layout_height="@dimen/NORMALVIEW_CHANNELNO_HEIGHT"
        android:layout_marginTop="28dp"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp" />

    <ImageView
        android:id="@+id/mute"
        android:layout_width="@dimen/NORMALVIEW_MUTE_ICON_SIZE"
        android:layout_height="@dimen/NORMALVIEW_MUTE_ICON_SIZE"
        android:background="@drawable/mute"
        android:visibility="invisible"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/mailIGV"
        android:layout_width="@dimen/NORMALVIEW_MAIL_ICON_SIZE"
        android:layout_height="@dimen/NORMALVIEW_MAIL_ICON_SIZE"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/mail"
        android:visibility="invisible"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toEndOf="@+id/channelNo"
        app:layout_constraintTop_toTopOf="parent" />


</com.prime.dtvplayer.View.NormalView>
