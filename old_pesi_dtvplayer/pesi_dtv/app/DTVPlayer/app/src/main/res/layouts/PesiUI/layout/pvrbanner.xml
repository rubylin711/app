<?xml version="1.0" encoding="utf-8"?>
<com.prime.dtvplayer.View.PvrBannerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pvrBannerbgIGV"
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:background="@drawable/banner" />

    <TextView
        android:id="@+id/pvrTypeTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"

        android:text="@string/STR_RECORD"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pvrBannerbgIGV"
        app:layout_constraintTop_toTopOf="@+id/pvrBannerbgIGV" />

    <TextView
        android:id="@+id/pvrSpeedTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pvrBannerbgIGV"
        app:layout_constraintEnd_toStartOf="@+id/pvrSymbolTXV"/>

    <ImageView
        android:id="@+id/pvrSymbolTXV"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/pvr_banner_ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/curTimeTXV"
        app:layout_constraintTop_toTopOf="@+id/pvrBannerbgIGV" />

    <TextView
        android:id="@+id/curTimeTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="00:00:00"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toEndOf="@+id/pvrTypeTXV"
        app:layout_constraintTop_toTopOf="@+id/pvrTypeTXV" />

    <ProgressBar
        android:id="@+id/PvrTimeProgBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/totalTimeTXV"
        app:layout_constraintStart_toEndOf="@+id/curTimeTXV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalTimeTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="00:00:00"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/curTimeTXV"
        app:layout_constraintEnd_toEndOf="@+id/pvrBannerbgIGV"
        app:layout_constraintTop_toTopOf="@+id/curTimeTXV" />

</com.prime.dtvplayer.View.PvrBannerView>
