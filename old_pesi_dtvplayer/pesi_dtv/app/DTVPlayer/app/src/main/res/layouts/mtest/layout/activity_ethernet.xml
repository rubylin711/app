<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtest.activity.Ethernet_Activity">

    <TextView
        android:id="@+id/tv_item18_eth"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_rectangle_pass"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/str_ethernet_activity_ip"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_item18_eth_idx"
        app:layout_constraintLeft_toRightOf="@+id/tv_item18_eth_idx" />

    <TextView
        android:id="@+id/tv_item18_title"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="@string/str_test_item_ethernet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item18_eth_idx"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle_blue_bright"
        android:gravity="center"
        android:text="@string/str_num_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item18_title" />

    <TextView
        android:id="@+id/tv_fail_count"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/shape_rectangle_fail"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_item18_eth"
        app:layout_constraintStart_toEndOf="@+id/tv_item18_eth" />

</androidx.constraintlayout.widget.ConstraintLayout>
