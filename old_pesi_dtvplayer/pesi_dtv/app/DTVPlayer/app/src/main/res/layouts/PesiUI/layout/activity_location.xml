<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="@dimen/MAIN_LAYOUT_ALPHA"
    android:background="@drawable/bg"
    tools:context=".Activity.LocationActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/title_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/selectboxLeft_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/WIDGET_CENTER" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/selectboxRight_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/WIDGET_END" />

    <include
        android:id="@+id/TitleLayout"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="@id/title_limit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/HelpLayout"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/help" />


    <TextView
        android:id="@+id/titleCountryTXV"
        android:text="@string/STR_COUNTRY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toTopOf="@+id/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@dimen/WIDGET_START"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_limit"
        app:layout_constraintVertical_bias="@dimen/WIDGET_TOP" />

    <TextView
        android:id="@+id/menuCountryTXV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/STR_PHILIPPINES"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/titleCountryTXV"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/titleCountryTXV" />


    <TextView
        android:id="@+id/titleWideAreaTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/STR_WIDE_AREA_ZONE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/titleCountryTXV"
        app:layout_constraintTop_toBottomOf="@+id/titleCountryTXV" />

    <TextView
        android:id="@+id/menuWideAreaTXV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/STR_PHILIPPINES"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/titleWideAreaTXV"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/titleWideAreaTXV"/>

    <TextView
        android:id="@+id/titleLocationTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/STR_REGION"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/titleCountryTXV"
        app:layout_constraintTop_toBottomOf="@+id/titleWideAreaTXV" />

    <TextView
        android:id="@+id/menuLocationTXV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/STR_PHILIPPINES"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/titleLocationTXV"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/titleLocationTXV" />

    <TextView
        android:id="@+id/menuProvinceCityTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/STR_PROVINCE_CITY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/titleLocationTXV"
        app:layout_constraintTop_toBottomOf="@+id/titleLocationTXV" />

    <Spinner
        android:id="@+id/provinceCityTXVSPINNER"
        android:layout_width="@dimen/LOCATION_WIDTH"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:descendantFocusability="afterDescendants"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:entries="@array/STR_ARRAY_CITY_LIST"
        app:layout_constraintBottom_toBottomOf="@+id/menuProvinceCityTXV"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/menuProvinceCityTXV" />

</androidx.constraintlayout.widget.ConstraintLayout>