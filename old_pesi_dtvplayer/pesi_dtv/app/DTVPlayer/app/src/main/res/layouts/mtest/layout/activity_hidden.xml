<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_hidden_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.mtest.activity.HiddenActivity">

    <TextView
        android:id="@+id/tv_hidden_title"
        android:layout_width="500dp"
        android:layout_height="25dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_hidden_osd"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/yellow_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_title" />

    <TextView
        android:id="@+id/tv_hidden_osd"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|start"
        android:text="@string/str_osd_show_display"
        app:layout_constraintLeft_toRightOf="@+id/iv_hidden_osd"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_title" />

    <TextView
        android:id="@+id/tv_hidden_red_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle_fail"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_osd"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_title" />

    <TextView
        android:id="@+id/tv_hidden_red_text"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|start"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_red_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_title" />

    <TextView
        android:id="@+id/tv_hidden_blue_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_red_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_title" />

    <TextView
        android:id="@+id/tv_hidden_blue_text"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|start"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_blue_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_title" />

    <TextView
        android:id="@+id/tv_hidden_yellow_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle_focus"
        app:layout_constraintLeft_toLeftOf="@+id/tv_hidden_red_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_red_icon" />

    <TextView
        android:id="@+id/tv_hidden_yellow_text"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|start"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_yellow_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_red_text" />

    <TextView
        android:id="@+id/tv_hidden_green_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle_green"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_yellow_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_blue_icon" />

    <TextView
        android:id="@+id/tv_hidden_green_text"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|start"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_green_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_blue_text" />

    <TextView
        android:id="@+id/tv_hidden_chup"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_yellow_icon" />

    <TextView
        android:id="@+id/tv_hidden_chdown"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_chup"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_yellow_icon" />

    <TextView
        android:id="@+id/tv_hidden_volup"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_hidden_yellow_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_yellow_icon" />

    <TextView
        android:id="@+id/tv_hidden_voldown"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_volup"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_yellow_icon" />

    <TextView
        android:id="@+id/tv_hidden_vol_value"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_voldown"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_yellow_icon" />

    <TextView
        android:id="@+id/tv_hidden_dump"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_chup" />

    <TextView
        android:id="@+id/tv_hidden_EHCI_FUN"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_hidden_voldown"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_voldown" />

    <TextView
        android:id="@+id/tv_hidden_EHCI_SWITCH"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_EHCI_FUN"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_vol_value" />

    <TextView
        android:id="@+id/tv_hidden_EHCI_VAL"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_hidden_EHCI_FUN"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_EHCI_FUN" />

    <TextView
        android:id="@+id/tv_hidden_exit"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_EHCI_VAL" />

    <TextView
        android:id="@+id/tv_hidden_stability"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_exit"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_EHCI_VAL" />

    <TextView
        android:id="@+id/tv_hidden_uni_cable_fun"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_hidden_EHCI_VAL"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_EHCI_VAL" />

    <TextView
        android:id="@+id/tv_hidden_uni_cable_switch"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toRightOf="@+id/tv_hidden_uni_cable_fun"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_EHCI_VAL" />

    <TextView
        android:id="@+id/tv_hidden_ch_name"
        android:layout_width="500dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center_vertical|start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hidden_exit" />

</androidx.constraintlayout.widget.ConstraintLayout>
