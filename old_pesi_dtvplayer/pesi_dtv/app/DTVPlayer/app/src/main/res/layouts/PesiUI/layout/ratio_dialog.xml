<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/RATIODIALOG_WIDTH"
    android:layout_height="wrap_content"
    android:background="@drawable/banner">

    <!--<ImageView-->
    <!--android:id="@+id/ratiobgIGV"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="271dp"-->
    <!--android:background="@drawable/banner"-->
    <!--android:contentDescription="@string/STR_TODO"-->
    <!--app:layout_constraintEnd_toStartOf="@+id/ratio_dialog_right_guideline"-->
    <!--app:layout_constraintHorizontal_bias="0.0"-->
    <!--app:layout_constraintStart_toStartOf="@+id/ratio_dialog_left_guideline"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/ratiotitlelineIGV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintEnd_toStartOf="@+id/ratio_dialog_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/ratio_dialog_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/ratiodialogtitleTXV" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ratio_dialog_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <TextView
        android:id="@+id/ratiodialogtitleTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_RATIO"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toEndOf="@+id/ratio_dialog_left_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ratiodialogtvratioTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_TV_RATIO"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toEndOf="@+id/ratio_dialog_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/ratiotitlelineIGV" />

    <TextView
        android:id="@+id/ratiodialogconversionTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_CONVERSION"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toEndOf="@+id/ratio_dialog_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/ratiodialogtvratioTXV" />

    <!--TextView
        android:id="@+id/ratiodialogresolutionTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_HDMI_RESOLUTION"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/ratiodialogconversionTXV" />
    -->

    <Spinner
        android:id="@+id/ratiodialogtvrationSPINNER"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selectbox"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:entries="@array/STR_TV_RATIO_OPTION"
        android:popupBackground="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="@+id/ratiodialogtvratioTXV"
        app:layout_constraintEnd_toStartOf="@+id/ratio_dialog_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/ratiodialog_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/ratiotitlelineIGV" />

    <Spinner
        android:id="@+id/ratiodialogconversionSPINNER"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/selectbox"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:entries="@array/STR_CONVERSION_OPTION"
        android:popupBackground="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="@+id/ratiodialogconversionTXV"
        app:layout_constraintEnd_toStartOf="@+id/ratio_dialog_right_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ratiodialog_middle_guideline"
        app:layout_constraintTop_toTopOf="@+id/ratiodialogconversionTXV"
        app:layout_constraintVertical_bias="1.0" />

    <!--Spinner
        android:id="@+id/ratiodialogresolutionSPINNER"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/selectbox"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:entries="@array/STR_HDMI_RESOLUTION_OPTION"
        android:popupBackground="@drawable/banner"
        app:layout_constraintStart_toStartOf="@+id/ratiodialog_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/ratiodialogconversionSPINNER"  />
    -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ratiodialog_middle_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <Button
        android:id="@+id/ratiodialogcancelBTN"
        android:layout_width="0dp"
        android:layout_height="@dimen/RATIODIALOG_BTN_HEIGHT"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_CANCEL"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ratiodialog_middle_guideline"
        app:layout_constraintStart_toStartOf="@+id/ratio_dialog_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/audiooutputTXV" />

    <Button
        android:id="@+id/ratiodialogokBTN"
        android:layout_width="0dp"
        android:layout_height="@dimen/RATIODIALOG_BTN_HEIGHT"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_OK"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ratio_dialog_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/ratiodialog_middle_guideline"
        app:layout_constraintTop_toBottomOf="@+id/audoutputSPINNER" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ratio_dialog_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ratio_dialog_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <TextView
        android:id="@+id/audiooutputTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_AUDIO_OUTPUT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/ratio_dialog_left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/ratiodialogconversionTXV" />

    <Spinner
        android:id="@+id/audoutputSPINNER"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/selectbox"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:entries="@array/STR_ARRAY_AUDIO_OUTPUT"
        android:popupBackground="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="@+id/audiooutputTXV"
        app:layout_constraintEnd_toStartOf="@+id/ratio_dialog_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/ratiodialog_middle_guideline"
        app:layout_constraintTop_toTopOf="@+id/audiooutputTXV" />


</androidx.constraintlayout.widget.ConstraintLayout>