<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item07_triangle_down"
        android:layout_width="12dp"
        android:layout_height="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/down_triangle"
        app:layout_constraintEnd_toEndOf="@+id/tv_item07_ANT"
        app:layout_constraintStart_toStartOf="@+id/tv_item07_ANT"
        app:layout_constraintTop_toBottomOf="@+id/tv_item07_ANT"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_item07_triangle_up"
        android:layout_width="12dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/up_triangle"
        app:layout_constraintBottom_toTopOf="@+id/tv_item07_ANT"
        app:layout_constraintEnd_toEndOf="@+id/tv_item07_ANT"
        app:layout_constraintStart_toStartOf="@+id/tv_item07_ANT"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_item07_fail"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:text="@string/str_fail"
        app:layout_constraintLeft_toRightOf="@+id/iv_item07_fail"
        app:layout_constraintTop_toBottomOf="@+id/iv_item07_triangle_down" />

    <TextView
        android:id="@+id/tv_item07_title"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/str_test_item_antenna5v"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item07_ANT"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_rectangle_orange"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/str_antenna_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item07_title" />

    <ImageView
        android:id="@+id/iv_item07_pass"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/str_pass"
        android:scaleType="fitCenter"
        android:src="@drawable/blue_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_item07_triangle_down" />

    <TextView
        android:id="@+id/tv_item07_pass"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:text="@string/str_pass"
        app:layout_constraintLeft_toRightOf="@+id/iv_item07_pass"
        app:layout_constraintTop_toBottomOf="@+id/iv_item07_triangle_down" />

    <ImageView
        android:id="@+id/iv_item07_fail"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/str_fail"
        android:scaleType="fitCenter"
        android:src="@drawable/red_btn"
        app:layout_constraintLeft_toRightOf="@+id/tv_item07_pass"
        app:layout_constraintTop_toBottomOf="@+id/iv_item07_triangle_down" />

</androidx.constraintlayout.widget.ConstraintLayout>
