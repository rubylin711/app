<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false">

    <TextView
        android:id="@+id/chNumTXV"
        android:layout_width="@dimen/DIMENSIONEPG_TABLE_CHANNEL_NUM_WIDTH"
        android:layout_height="@dimen/LIST_VIEW_HEIGHT"
        android:gravity="center"
        android:textSize="@dimen/TEXT_SIZE"
        android:background="@drawable/full_black_2d_epg_event_bg"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_vertical|center_horizontal" />
    <TextView
        android:id="@+id/chNameTXV"
        android:layout_width="@dimen/DIMENSIONEPG_TABLE_CHANNEL_NAME_WIDTH"
        android:layout_height="@dimen/LIST_VIEW_HEIGHT"
        android:singleLine="true"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/TEXT_SIZE"
        android:paddingLeft="6dp"
        android:background="@drawable/full_black_2d_epg_event_bg"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center_vertical|center_horizontal"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.prime.dtvplayer.View.guide.ProgramRow
            android:id="@+id/row"
            android:layout_width="match_parent"
            android:layout_height="@dimen/LIST_VIEW_HEIGHT"
            />
    </LinearLayout>

</LinearLayout>
