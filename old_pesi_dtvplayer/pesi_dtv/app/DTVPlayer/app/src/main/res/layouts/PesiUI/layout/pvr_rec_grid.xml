<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pvr_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="@dimen/MAIN_LAYOUT_ALPHA"
    android:background="@drawable/bg"
    android:visibility="visible"
    tools:context="com.prime.dtvplayer.Activity.RecordGridActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_title_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_help_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <include
        android:id="@+id/pvrTitle"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pvr_title_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/pvrHelp"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pvr_help_guideline" />

    <include
        android:id="@+id/pvr_banner"
        layout="@layout/pvrbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/TITLE_EDGE" />

    <LinearLayout
        android:id="@+id/rec_list_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/pvrTitle"
        app:layout_constraintBottom_toBottomOf="@+id/rec_date_str"
        app:layout_constraintStart_toStartOf="@id/pvr_left"
        app:layout_constraintEnd_toEndOf="@id/pvr_right">

        <com.prime.dtvplayer.View.GridRecyclerView
            android:id="@+id/pvr_rec_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical" />

    </LinearLayout>

    <!--
    <TextView
        android:id="@+id/file_size_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:visibility="gone"
        android:text="@string/STR_FILE_SIZE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toTopOf="@+id/pvrHelp"
        app:layout_constraintStart_toStartOf="@id/pvr_left"/>
    <TextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:text="0000 MB"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintStart_toEndOf="@+id/file_size_str"
        app:layout_constraintBottom_toBottomOf="@+id/file_size_str"
        tools:ignore="HardcodedText" />
    -->

    <TextView
        android:id="@+id/rec_date_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:text="@string/STR_REC_DATE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/pvrHelp"
        app:layout_constraintStart_toEndOf="@id/pvr_left" />
    <TextView
        android:id="@+id/rec_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="00:00 00/00/00"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/rec_date_str"
        app:layout_constraintBottom_toBottomOf="@+id/rec_date_str"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/pvr_time_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/STR_PVR_TIME"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintStart_toEndOf="@+id/rec_date"
        app:layout_constraintBottom_toBottomOf="@+id/rec_date"/>
    <TextView
        android:id="@+id/pvr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="00:00:00"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toBottomOf="@+id/pvr_time_str"
        app:layout_constraintStart_toEndOf="@id/pvr_time_str"
        tools:ignore="HardcodedText" />

    <!--
    <TextView
        android:id="@+id/pvr_program_name"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="Program Name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/rec_date"
        app:layout_constraintBottom_toTopOf="@+id/pvrHelp"
        app:layout_constraintTop_toTopOf="@+id/rec_date_str"
        tools:ignore="HardcodedText" />
    -->

    <TextView
        android:id="@+id/rateTXV"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="end"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintStart_toEndOf="@+id/pvr_time"
        app:layout_constraintBottom_toBottomOf="@+id/pvr_time" />
    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintStart_toEndOf="@+id/rateTXV"
        app:layout_constraintBottom_toBottomOf="@+id/rateTXV"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/pvr_rec_list_txvLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/STR_LOADING"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintTop_toBottomOf="@id/pvrTitle"
        app:layout_constraintBottom_toTopOf="@+id/rec_date_str"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/pvr_rec_list_prgLoading"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="100dp"
        app:layout_constraintTop_toTopOf="@id/pvr_rec_list_txvLoading"
        app:layout_constraintBottom_toBottomOf="@+id/pvr_rec_list_txvLoading"
        app:layout_constraintStart_toStartOf="@+id/pvr_rec_list_txvLoading"
        app:layout_constraintEnd_toEndOf="@+id/pvr_rec_list_txvLoading" />

    <TextView
        android:id="@+id/empty_file_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_EMPTY_FILE_LIST"
        android:textColor="@android:color/white"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/rec_date_str"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvrTitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pvr_video_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9">

        <SurfaceView
            android:id="@+id/pvr_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/pvr_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/PVR_TEXT_HEIGHT"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/pvr_video_frame"
            app:layout_constraintEnd_toEndOf="@id/pvr_video_frame"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_LEFT_EDGE"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_RIGHT_EDGE"/>

</androidx.constraintlayout.widget.ConstraintLayout>
