<?xml version="1.0" encoding="utf-8"?>
<com.prime.dtvplayer.View.caMsgLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="@dimen/MAIN_LAYOUT_ALPHA"
    android:background="@drawable/banner">


    <ImageView
        android:id="@+id/bgIGV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caInfoTitleTXV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:text="@string/str_ca_msg"
        android:textSize="@dimen/TEXT_SIZE"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/title_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_NULL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caInfoTitleTXV" />

    <TextView
        android:id="@+id/caMsgTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_line" />

    <!--Button
        android:id="@+id/backBTN"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginTop="8dp"
        android:text="@string/STR_BACK"
        android:background="@drawable/item_selector"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/caMsgTXV"
        app:layout_constraintTop_toBottomOf="@+id/caMsgTXV" /-->
</com.prime.dtvplayer.View.caMsgLayout>
