<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.prime.dtvplayer.TestMiddleware.TestPVRPlayActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUIDELINE_RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95104164" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUIDELINE_LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.019791666" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUIDELINE_CENTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40104166" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUIDELINE_TITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUIDELINE_HELP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />

    <include
        android:id="@+id/ID_TESTPIP_LAYOUT_TITLE"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="@id/ID_TESTPIP_GUIDELINE_TITLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/ID_TESTPIP_LAYOUT_HELP"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="122dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ID_TESTPIP_GUIDELINE_HELP" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/ID_TESTPIP_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@id/ID_TESTPIP_GUIDELINE_CENTER"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/ID_TESTPIP_GUIDELINE_LEFT"
        app:layout_constraintTop_toBottomOf="@id/ID_TESTPIP_GUIDELINE_TITLE"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ID_TESTPIP_BTN_MainPlayCh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipMainPlayByChannelId"
                android:text="MainPlay()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPIP_BTN_MainPlayUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipMainPlayUp_OnClick"
                android:text="MainPlayUp()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPIP_BTN_MainPlayDn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipMainPlayDown_OnClick"
                android:text="MainPlayDown()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPIP_BTN_MainPlayStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipMainPlayStop_OnClick"
                android:text="MainPlayStop()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPIP_BTN_MainClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipMainClose_OnClick"
                android:text="MainClose()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPIP_BTN_PipOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipOpen_OnClick"
                android:text="PipOpen()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PipStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipStart_OnClick"
                android:text="PipStart()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PipSetWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipSetWindow_OnClick"
                android:text="PipSetWindow()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PipPlayUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipPlayUp_OnClick"
                android:text="PipPlayUp()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PipPlayDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipPlayDown_OnClick"
                android:text="PipPlayDown()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PipStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipStop_OnClick"
                android:text="PipStop()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PipExChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipExChange_OnClick"
                android:text="PipExChange()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_PipClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipClose_OnClick"
                android:text="PipClose()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTPVR_BTN_ExChange100Times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipExChange100Times_OnClick"
                android:text="PipExChange100Times()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />
            <Button
                android:id="@+id/ID_TESTPVR_BTN_ChannelChangeStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipChannelChangeStart_OnClick"
                android:text="PipChannelChangeTestStart()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />
            <Button
                android:id="@+id/ID_TESTPVR_BTN_ChannelChangeStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnPipChannelChangeStop_OnClick"
                android:text="PipChannelChangeTestStop()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />
        </LinearLayout>
    </ScrollView>

    <SurfaceView
        android:id="@+id/ID_TESTPIP_MAIN_SURFACEVIEW"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTPIP_GUIDELINE_RIGHT"
        app:layout_constraintStart_toStartOf="@+id/ID_TESTPIP_GUIDELINE_CENTER"
        app:layout_constraintTop_toTopOf="@+id/ID_TESTPIP_GUIDELINE_TITLE" />

    <!--<SurfaceView
        android:id="@+id/ID_TESTPIP_SUB_SURFACEVIEW"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_BOTTOM"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_RIGHT"
        app:layout_constraintStart_toStartOf="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_LEFT"
        app:layout_constraintTop_toTopOf="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_TOP"
        app:layout_constraintVertical_bias="0.53999996" />-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_TOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_BOTTOM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPIP_GUILDLINE_SMALL_VIEW_RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/ID_TESTPIP_MAIN_PROGRAM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTPIP_GUIDELINE_RIGHT"
        app:layout_constraintStart_toStartOf="@+id/ID_TESTPIP_GUIDELINE_CENTER"
        app:layout_constraintTop_toBottomOf="@+id/ID_TESTPIP_MAIN_SURFACEVIEW" />

    <TextView
        android:id="@+id/ID_TESTPIP_SUB_PROGRAM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toTopOf="@+id/ID_TESTPIP_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTPIP_GUIDELINE_RIGHT"
        app:layout_constraintStart_toStartOf="@+id/ID_TESTPIP_GUIDELINE_CENTER"
        app:layout_constraintTop_toBottomOf="@+id/ID_TESTPIP_MAIN_PROGRAM" />

</androidx.constraintlayout.widget.ConstraintLayout>