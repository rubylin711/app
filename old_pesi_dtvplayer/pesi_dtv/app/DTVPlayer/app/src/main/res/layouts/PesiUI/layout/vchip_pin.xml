<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password_layout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:background="@drawable/banner"
	android:orientation="vertical">

	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="@string/STR_ENTER_PASSWORD"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/TEXT_SIZE"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/titlelineIGV"
		android:layout_width="0dp"
		android:layout_height="2dp"
		android:layout_margin="0dp"
		android:layout_marginTop="8dp"
		android:background="@drawable/title_line"
		android:contentDescription="@string/STR_TODO"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/title" />

	<TextView
		android:id="@+id/pin_textview"
		android:layout_width="@dimen/PASSWORDDIALOG_PIN_TEXTVIEW_WIDTH"
		android:layout_height="@dimen/PASSWORDDIALOG_PIN_TEXTVIEW_HEIGHT"
		android:layout_weight="1"
		android:background="@drawable/button_pin_null"
		android:contentDescription="@string/STR_ENTER_PASSWORD"
		android:cursorVisible="false"
		android:focusableInTouchMode="true"
		android:gravity="center"
		android:inputType="number"
		android:maxLength="4"
		android:password="true"
		android:singleLine="true"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/TEXT_SIZE"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/pinMsgTXV"
		app:layout_constraintVertical_bias="0.13" />

	<Button
		android:id="@+id/return_icon"
		android:layout_width="@dimen/PASSWORDDIALOG_BTN_WIDTH"
		android:layout_height="@dimen/PASSWORDDIALOG_BTN_HEIGHT"
		android:layout_marginStart="124dp"
		android:background="@drawable/item_selector"
		android:text="@string/STR_CANCEL"
		android:textColor="@color/text_color"
		android:textSize="@dimen/TEXT_SIZE"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/ok_icon" />

	<Button
		android:id="@+id/ok_icon"
		android:layout_width="@dimen/PASSWORDDIALOG_BTN_WIDTH"
		android:layout_height="@dimen/PASSWORDDIALOG_BTN_HEIGHT"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="124dp"
		android:layout_marginStart="48dp"
		android:layout_marginTop="8dp"
		android:background="@drawable/item_selector"
		android:text="@string/STR_OK"
		android:textColor="@color/text_color"
		android:textSize="@dimen/TEXT_SIZE"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/return_icon"
		app:layout_constraintTop_toBottomOf="@+id/pin_textview" />

	<TextView
		android:id="@+id/pinMsgTXV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:visibility="gone"
		android:textColor="@color/text_color"
		android:textSize="@dimen/TEXT_SIZE"
		android:gravity="center"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/titlelineIGV" />

</androidx.constraintlayout.widget.ConstraintLayout>
