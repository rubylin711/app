<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oklistLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/horizontal_black_bg_round_corner"
    android:alpha="@dimen/MAIN_LAYOUT_ALPHA"
    android:theme="@style/Transparent"
    android:layout_marginStart="16dp"
    tools:ignore="DuplicateIds">

    <EditText
        android:id="@+id/oklisttitleTXV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:inputType="text|number"
        android:singleLine="true"
        android:text="@string/STR_ALL_TV_CHANNELS"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TITLE_SIZE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/oklisttitlelineIGV"/>

    <ImageView
        android:id="@+id/oklisttitlelineIGV"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/gradient_title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/oklistLIV_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintVertical_bias="0.0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oklistLIV"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:descendantFocusability="afterDescendants"
            android:focusable="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="LinearLayoutManager" />

    </LinearLayout>

    <TextView
        android:id="@+id/oklisttpinfoTXV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_LAD_SMALL_SIZE"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/oklisthelpTXV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:text="@string/STR_OKLIST_HELP_OK_SELECT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_LAD_OK_LIST_HELP_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/oklistview_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="81dp" />

    <TextView
        android:id="@+id/oklistnofavchannelTXV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/STR_NO_FAV_CHANNEL"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/oklistview_top_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
