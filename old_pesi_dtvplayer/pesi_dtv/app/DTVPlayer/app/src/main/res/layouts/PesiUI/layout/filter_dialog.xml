<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/voice_input_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner">

    <TextView
        android:id="@+id/voice_input_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/STR_FILTER"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/title_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintTop_toBottomOf="@id/voice_input_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--<ImageView
        android:id="@+id/key_word_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/LIST_VIEW_HEIGHT"
        android:layout_margin="8dp"
        android:background="@drawable/selectbox"
        android:scaleType="fitXY"
        android:focusable="false"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintTop_toBottomOf="@+id/title_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>-->

    <EditText
        android:id="@+id/key_word"
        android:layout_width="0dp"
        android:layout_height="@dimen/LIST_VIEW_HEIGHT"
        android:layout_margin="8dp"
        android:inputType="text"
        android:maxLength="30"
        android:maxLines="1"
        android:text="@string/STR_CHANNEL"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:gravity="center"
        android:background="@drawable/selectbox"
        android:nextFocusUp="@id/key_word_list"
        android:nextFocusDown="@id/key_word_list"
        android:nextFocusForward="@id/key_word_list"
        app:layout_constraintTop_toBottomOf="@+id/title_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,LabelFor" />
    <ImageView
        android:id="@+id/key_word_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintTop_toBottomOf="@id/key_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--<TextView
        android:id="@+id/key_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="200dp"
        android:textSize="@dimen/TEXT_SIZE"
        android:textColor="@android:color/white"
        android:text="Key Word"
        android:gravity="center"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:background="@drawable/focus_list"
        app:layout_constraintTop_toTopOf="@+id/key_word_img"
        app:layout_constraintBottom_toBottomOf="@+id/key_word_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />-->

    <LinearLayout
        android:id="@+id/key_word_list_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/key_word_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">

        <com.prime.dtvplayer.View.FilterList
            android:id="@+id/key_word_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/key_word_has_no_channel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/TEXT_SIZE"
        android:textColor="@android:color/white"
        android:text="@string/STR_CHANNEL_NOT_FOUND"
        android:visibility="visible"
        android:gravity="center"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@+id/key_word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>