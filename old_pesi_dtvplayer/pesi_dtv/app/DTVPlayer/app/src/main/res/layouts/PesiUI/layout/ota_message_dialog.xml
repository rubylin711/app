<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OTAMessageDialogView"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/banner">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/messageDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/STR_INFO"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/TitleLineIGV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageDialogTitle" />

    <TextView
        android:id="@+id/msgTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_NULL"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/okBTN"
        android:layout_width="100dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:background="@drawable/item_selector"
        android:text="@string/STR_OK"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/msgTXV" />

    <Button
        android:id="@+id/cancelBTN"
        android:layout_width="100dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_CANCEL"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/msgTXV" />

    <ProgressBar
        android:id="@+id/otaPROGBAR"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/INFODETAIL_PROGBAR_HEIGHT"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/progressValueTXV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgTXV" />

    <TextView
        android:id="@+id/progressValueTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/otaPROGBAR"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>