<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MailInfoDialog">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <ImageView
        android:id="@+id/bgIGV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/banner"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guidelineRight"
        app:layout_constraintEnd_toStartOf="@+id/guidelineBot"
        app:layout_constraintStart_toStartOf="@+id/guidelineTop"
        app:layout_constraintTop_toTopOf="@+id/guidelineLeft" />

    <ImageView
        android:id="@+id/titleLineIGV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/title_line"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/guidelineBot"
        app:layout_constraintStart_toStartOf="@+id/guidelineTop"
        app:layout_constraintTop_toBottomOf="@+id/mailTitleTXV" />

    <TextView
        android:id="@+id/mailTitleTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DETAILINFODIALOG_TXV_HEIGHT"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/STR_MAIL"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/guidelineBot"
        app:layout_constraintStart_toStartOf="@+id/guidelineTop"
        app:layout_constraintTop_toTopOf="@+id/bgIGV" />

    <ScrollView
        android:id="@+id/mailScrollSCV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/bgIGV"
        app:layout_constraintEnd_toEndOf="@+id/bgIGV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bgIGV"
        app:layout_constraintTop_toBottomOf="@+id/titleLineIGV"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/mailMsgTXV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="123\n4578\n111\n222\n333\n999\n654\n123\n4586"
            android:maxLines="8"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>