<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="160dp"
    android:background="@drawable/banner"
    tools:context=".View.SleepTimerSettingDialog">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/sleepTitleTXV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/STR_INFO"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recDurTitleLineIGV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTitleTXV" />


    <TextView
        android:id="@+id/msgTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/STR_SLEEP_IN"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/centerGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepTitleTXV" />

    <Spinner
        android:id="@+id/sleepSPINNER"
        android:layout_width="@dimen/SLEEP_TIMER_WIDTH"
        android:layout_height="@dimen/VIEW_LAD_DVBC_CHSEARCH_HEIGHT"
        android:layout_marginStart="24dp"
        android:descendantFocusability="afterDescendants"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintBottom_toBottomOf="@+id/msgTXV"
        app:layout_constraintStart_toEndOf="@+id/msgTXV"
        app:layout_constraintTop_toTopOf="@+id/msgTXV" />

    <!--
    <TextView
        android:id="@+id/minutesTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text="@string/STR_MINUTES"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/msgTXV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/centerGuideline"
        app:layout_constraintTop_toTopOf="@+id/msgTXV" />
    -->

    <Button
        android:id="@+id/okBTN"
        android:layout_width="@dimen/CHANNELSEARCH_ITEM_WIDTH"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_OK"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msgTXV" />


</androidx.constraintlayout.widget.ConstraintLayout>