<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/password_layout"
    android:layout_width="550dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/banner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_PLEASE_SELECT_YOUR_PROVINCE_CITY_FIRST"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/titlelineIGV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/countryTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/STR_COUNTRY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/countryValueTXV"
        android:layout_width="@dimen/LOCATION_WIDTH"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/STR_PHILIPPINES"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/countryTXV" />

    <TextView
        android:id="@+id/wideAreaZoneTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/STR_WIDE_AREA_ZONE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/countryTXV"
        app:layout_constraintTop_toBottomOf="@+id/countryTXV" />

    <TextView
        android:id="@+id/wideAreaZoneValueTXV"
        android:layout_width="@dimen/LOCATION_WIDTH"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/countryValueTXV"
        app:layout_constraintTop_toTopOf="@+id/wideAreaZoneTXV" />

    <TextView
        android:id="@+id/regionTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/STR_REGION"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/wideAreaZoneTXV"
        app:layout_constraintTop_toBottomOf="@+id/wideAreaZoneTXV" />

    <TextView
        android:id="@+id/regionValueTXV"
        android:layout_width="@dimen/LOCATION_WIDTH"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/wideAreaZoneValueTXV"
        app:layout_constraintTop_toTopOf="@+id/regionTXV" />

    <TextView
        android:id="@+id/provinceCityTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/STR_PROVINCE_CITY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/regionTXV"
        app:layout_constraintTop_toBottomOf="@+id/regionTXV" />

    <Spinner
        android:id="@+id/provinceCityTXVSPINNER"
        android:layout_width="@dimen/LOCATION_WIDTH"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:descendantFocusability="afterDescendants"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:entries="@array/STR_ARRAY_CITY_LIST"
        app:layout_constraintStart_toStartOf="@+id/regionValueTXV"
        app:layout_constraintTop_toTopOf="@+id/provinceCityTXV" />

    <Button
        android:id="@+id/okBTN"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_OK"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/provinceCityTXVSPINNER" />

    <!--
    <Button
        android:id="@+id/cancelBTN"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginStart="24dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_CANCEL"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="@+id/okBTN" />
        -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>