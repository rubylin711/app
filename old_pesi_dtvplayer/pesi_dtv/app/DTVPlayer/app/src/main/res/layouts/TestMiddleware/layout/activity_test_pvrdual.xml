<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".TestMiddleware.TestPVRDualActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_RIGHT_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_LEFT_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_CENTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_TITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTPVR_GUIDELINE_HELP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />

    <include
        android:id="@+id/ID_TESTPVR_LAYOUT_TITLE"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="@id/ID_TESTPVR_GUIDELINE_TITLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/ID_TESTPVR_LAYOUT_HELP"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ID_TESTPVR_GUIDELINE_HELP" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/ID_TESTPVR_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@id/ID_TESTPVR_GUIDELINE_CENTER"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/ID_TESTPVR_GUIDELINE_LEFT"
        app:layout_constraintTop_toBottomOf="@id/ID_TESTPVR_GUIDELINE_TITLE"
        app:layout_constraintVertical_bias="0.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordGetAllInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordGetAllInfo_OnClick"
            android:text=" PvrRecordGetAllInfo()"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordA_OnClick"
            android:text=" PvrRecordA()"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordB_OnClick"
            android:text=" PvrRecordB()"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <!--Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordTwo_OnClick"
            android:text=" PvrRecordTwo: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />-->

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordStopA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordStopA_OnClick"
            android:text=" PvrRecordStopA: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordStopB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordStopB_OnClick"
            android:text=" PvrRecordStopB: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <!--Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordStopAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordStopAll_OnClick"
            android:text=" PvrRecordStopAll: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />-->

        <Button
            android:id="@+id/ID_TESTPVR_BTN_DelFileA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="DelFileA_OnClick"
            android:text=" DelFileA: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_DelFileB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="DelFileB_OnClick"
            android:text=" DelFileB: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrPlayStartA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrPlayStartA_OnClick"
            android:text=" PvrPlayStartA: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrPlayStartB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrPlayStartB_OnClick"
            android:text=" PvrPlayStartB: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrPlayStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrPlayStop_OnClick"
            android:text=" PvrPlayStop: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <!--Button
            android:id="@+id/ID_TESTPVR_BTN_PvrRecordTwoTimeshiftOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrRecordTwoTimeshiftOne_OnClick"
            android:text=" PvrRecordTwoTimeshiftOne: "
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />-->


        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrTimeShiftStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrTimeShiftStart_OnClick"
            android:text="PvrTimeShiftStart()"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrTimeShiftStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrTimeShiftStop_OnClick"
            android:text="PvrTimeShiftStop()"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrTimeShiftPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrTimeShiftPlay_OnClick"
            android:text="PvrTimeShiftPlay()"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

        <Button
            android:id="@+id/ID_TESTPVR_BTN_PvrTimeShiftPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:onClick="PvrTimeShiftPause_OnClick"
            android:text="PvrTimeShiftPause()"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />

    </LinearLayout>
    </ScrollView>

    <SurfaceView
        android:id="@+id/ID_TESTPVR_SURFACEVIEW_PLAY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ID_TESTPVR_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTPVR_GUIDELINE_RIGHT"
        app:layout_constraintStart_toStartOf="@+id/ID_TESTPVR_GUIDELINE_CENTER"
        app:layout_constraintTop_toTopOf="@+id/ID_TESTPVR_GUIDELINE_TITLE" />

    <TextView
        android:id="@+id/TxvChIdA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="420dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TxvChIdB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TxvChIdA"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>