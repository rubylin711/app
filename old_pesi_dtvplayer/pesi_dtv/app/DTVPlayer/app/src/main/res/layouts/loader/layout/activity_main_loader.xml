<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.loader.MainActivity">

    <Button
        android:id="@+id/bn_ldr_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:text="@string/STR_LOADER_DTV_LOADER_STATUS_PAGE"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bn_ldr_params"
        app:layout_constraintTop_toBottomOf="@+id/guideline24"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/bn_ldr_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:text="@string/STR_LOADER_DTV_LOADER_PARAMETERS_PAGE"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bn_usb_pg"
        app:layout_constraintTop_toBottomOf="@+id/bn_ldr_status" />

    <Button
        android:id="@+id/bn_usb_pg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:text="@string/STR_LOADER_DTV_USB_UPGRADE_PAGE"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bn_ota_pg"
        app:layout_constraintTop_toBottomOf="@+id/bn_ldr_params" />

    <Button
        android:id="@+id/bn_ota_pg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:text="@string/STR_LOADER_DTV_OTA_UPGRADE_PAGE"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bn_secure_pg"
        app:layout_constraintTop_toBottomOf="@+id/bn_usb_pg" />

    <Button
        android:id="@+id/bn_secure_pg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:text="@string/STR_LOADER_DTV_SECURE_SETTING_PAGE"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline25"
        app:layout_constraintTop_toBottomOf="@+id/bn_ota_pg"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>