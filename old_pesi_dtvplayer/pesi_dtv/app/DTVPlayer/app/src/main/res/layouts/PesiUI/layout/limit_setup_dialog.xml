<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/banner">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="8dp"
        android:text="@string/STR_LIMIT_SETUP"
        android:textSize="@dimen/TEXT_SIZE"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/title_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_NULL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/txv_east_limit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_EAST_LIMIT"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_line"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/txv_west_limit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_WEST_LIMIT"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/txv_east_limit"
        app:layout_constraintTop_toBottomOf="@+id/txv_east_limit"/>
<!--

    <TextView
        android:id="@+id/pol_txv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_POLARIZATION"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@+id/txv_east_limit"
        app:layout_constraintTop_toBottomOf="@+id/txv_west_limit"/>
-->


    <TextView
        android:id="@+id/txv_east_limit_btn"
        android:layout_width="@dimen/EDITPOS32DIALOG_LIMIT_SETUP_EAST_LIMIT_TXV_WIDTH"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="50dp"
        android:text="@string/STR_STOP"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:gravity="center"
        android:background="@drawable/selectbox"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/txv_east_limit"
        app:layout_constraintTop_toTopOf="@+id/txv_east_limit"
        app:layout_constraintBottom_toBottomOf="@+id/txv_east_limit"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txv_west_limit_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:text="@string/STR_NOT_SET"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:gravity="center"
        android:background="@drawable/focus_list"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="@+id/txv_east_limit_btn"
        app:layout_constraintEnd_toEndOf="@id/txv_east_limit_btn"
        app:layout_constraintTop_toTopOf="@+id/txv_west_limit"
        app:layout_constraintBottom_toBottomOf="@+id/txv_west_limit"/>

    <TextView
        android:id="@+id/txv_reset_diseqc_limit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="@string/STR_RESET_DISEQC_LIMIT"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:gravity="center"
        android:background="@drawable/focus_list"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="@+id/txv_east_limit_btn"
        app:layout_constraintStart_toStartOf="@+id/txv_east_limit_btn"
        app:layout_constraintTop_toBottomOf="@+id/txv_west_limit_btn" />

    <TextView
        android:id="@+id/txv_disable"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="36dp"
        android:text="@string/STR_DISABLE"
        android:textSize="@dimen/TEXT_SIZE"
        android:textColor="@color/text_color"
        android:background="@drawable/focus_list"
        android:focusable="true"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/txv_reset_diseqc_limit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/txv_reset_diseqc_limit"
        app:layout_constraintEnd_toEndOf="@id/txv_reset_diseqc_limit"/>

</androidx.constraintlayout.widget.ConstraintLayout>