<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/banner">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="8dp"
        android:text="@string/STR_INFO"
        android:textSize="@dimen/TEXT_SIZE"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/title_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_NULL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/message_txv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_DO_YOU_WANT_TO_DELETE_THE_RECORDING"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_line"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/message_yes_txv"
        android:layout_width="70dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_OK"
        android:gravity="center"
        android:focusable="true"
        android:background="@drawable/focus_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/message_txv"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/message_txv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/message_no_txv"
        android:layout_width="70dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginEnd="8dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_CANCEL"
        android:gravity="center"
        android:focusable="true"
        android:background="@drawable/focus_list"
        app:layout_constraintEnd_toStartOf="@id/message_yes_txv"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/message_yes_txv"
        app:layout_constraintBottom_toBottomOf="@+id/message_yes_txv"/>

</androidx.constraintlayout.widget.ConstraintLayout>