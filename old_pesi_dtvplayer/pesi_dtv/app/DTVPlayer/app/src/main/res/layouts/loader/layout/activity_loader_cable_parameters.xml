<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.loader.LoaderCableParameters">

    <TextView
        android:id="@+id/t_cable_titile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/STR_LOADER_DTV_LOADER_PARAMETERS_PAGE"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/t_cable_channel"
        app:layout_constraintStart_toStartOf="@+id/guideline22"
        app:layout_constraintTop_toTopOf="@+id/guideline21" />

    <Spinner
        android:id="@+id/e_cable_qam"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="@drawable/selectbox"
        android:descendantFocusability="afterDescendants"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:focusable="true"
        android:popupBackground="@drawable/banner"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/e_cable_symbol"
        app:layout_constraintStart_toStartOf="@+id/e_cable_symbol"
        app:layout_constraintTop_toTopOf="@+id/t_cable_qam" />

    <EditText
        android:id="@+id/e_cable_freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline12"
        app:layout_constraintTop_toTopOf="@+id/t_cable_channel" />

    <EditText
        android:id="@+id/e_cable_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/e_cable_freq"
        app:layout_constraintTop_toTopOf="@+id/t_cable_symbol" />

    <EditText
        android:id="@+id/e_cable_pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/e_cable_qam"
        app:layout_constraintTop_toTopOf="@+id/t_cable_pid" />

    <TextView
        android:id="@+id/t_cable_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="@string/STR_LOADER_DTV_CHANNEL"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/t_cable_symbol"
        app:layout_constraintStart_toStartOf="@+id/guideline13"
        app:layout_constraintTop_toBottomOf="@+id/guideline14" />

    <TextView
        android:id="@+id/t_cable_qam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_LOADER_DTV_QAM"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/t_cable_pid"
        app:layout_constraintStart_toStartOf="@+id/t_cable_symbol"
        app:layout_constraintTop_toBottomOf="@+id/t_cable_symbol" />

    <TextView
        android:id="@+id/t_cable_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_LOADER_DTV_SYMBOL_RATE"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/t_cable_qam"
        app:layout_constraintStart_toStartOf="@+id/t_cable_channel"
        app:layout_constraintTop_toBottomOf="@+id/t_cable_channel" />

    <TextView
        android:id="@+id/t_cable_pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_LOADER_DTV_PID"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/b_cable_confirm"
        app:layout_constraintStart_toStartOf="@+id/t_cable_qam"
        app:layout_constraintTop_toBottomOf="@+id/t_cable_qam" />

    <Button
        android:id="@+id/b_cable_confirm"
        android:layout_width="0dp"
        android:layout_height="28sp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_LOADER_DTV_SEARCH"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/t_cable_status"
        app:layout_constraintEnd_toEndOf="@+id/e_cable_pid"
        app:layout_constraintStart_toStartOf="@+id/t_cable_pid"
        app:layout_constraintTop_toBottomOf="@+id/t_cable_pid" />

    <TextView
        android:id="@+id/t_cable_status"
        android:layout_width="661dp"
        android:layout_height="wrap_content"
        android:text="@string/STR_LOADER_DTV_EDIT_HINT"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline15"
        app:layout_constraintEnd_toEndOf="@+id/e_cable_freq"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/t_cable_channel"
        app:layout_constraintTop_toBottomOf="@+id/b_cable_confirm" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>
