<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="8dp"
        android:text="@string/STR_SAT_EDIT"
        android:textSize="@dimen/TEXT_SIZE"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/title_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_NULL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/sat_txv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_DVBS_SATELLITE"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_line"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:id="@+id/pos_txv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_POSITION"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/sat_txv"
        app:layout_constraintTop_toBottomOf="@+id/sat_txv"/>


    <EditText
        android:id="@+id/sat_name_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="sat_name"
        android:gravity="center"
        android:inputType="text"
        android:nextFocusDown="@id/pos_val1_txv"
        android:nextFocusRight="@id/pos_val1_txv"
        app:layout_constraintStart_toEndOf="@+id/sat_txv"
        app:layout_constraintTop_toTopOf="@+id/sat_txv"
        app:layout_constraintBottom_toBottomOf="@+id/sat_txv"
        app:layout_constraintEnd_toEndOf="@id/ew_spinner"
        tools:ignore="HardcodedText,LabelFor" />

    <EditText
        android:id="@+id/pos_val1_txv"
        android:layout_width="@dimen/EDITSATDIALOG_ITEM_WIDTH"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="0"
        android:gravity="center"
        android:focusable="true"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:selectAllOnFocus="true"
        android:nextFocusRight="@id/pos_val2_txv"
        android:nextFocusDown="@id/save_txv"
        app:layout_constraintStart_toStartOf="@+id/sat_name_edt"
        app:layout_constraintTop_toTopOf="@+id/pos_txv"
        app:layout_constraintBottom_toBottomOf="@+id/pos_txv"
        tools:ignore="HardcodedText,LabelFor" />
    <TextView
        android:id="@+id/dot_txv"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="ï¼Ž"
        android:gravity="center"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@+id/pos_val1_txv"
        app:layout_constraintTop_toTopOf="@+id/pos_val1_txv"
        app:layout_constraintBottom_toBottomOf="@+id/pos_val1_txv"
        tools:ignore="HardcodedText" />
    <EditText
        android:id="@+id/pos_val2_txv"
        android:layout_width="@dimen/EDITSATDIALOG_ITEM_WIDTH"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="0"
        android:gravity="center"
        android:focusable="true"
        android:inputType="numberDecimal"
        android:nextFocusRight="@id/ew_spinner"
        android:nextFocusDown="@id/save_txv"
        android:maxLength="1"
        android:selectAllOnFocus="true"
        app:layout_constraintStart_toEndOf="@+id/dot_txv"
        app:layout_constraintTop_toTopOf="@+id/pos_val1_txv"
        app:layout_constraintBottom_toBottomOf="@+id/pos_val1_txv"
        tools:ignore="HardcodedText,LabelFor" />
    <Spinner
        android:id="@+id/ew_spinner"
        android:layout_width="@dimen/EDITSATDIALOG_ITEM_WIDTH"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/selectbox"
        android:popupBackground="@drawable/banner"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:entries="@array/STR_EW"
        android:nextFocusDown="@id/save_txv"
        app:layout_constraintStart_toEndOf="@+id/pos_val2_txv"
        app:layout_constraintTop_toTopOf="@+id/pos_val1_txv"
        app:layout_constraintBottom_toBottomOf="@+id/pos_val1_txv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cancel_txv"
        android:layout_width="@dimen/EDITSATDIALOG_ITEM_WIDTH"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_marginTop="8dp"
        android:text="@string/STR_CANCEL"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:focusable="true"
        android:gravity="center"
        android:background="@drawable/focus_list"
        android:layout_marginBottom="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="@id/ew_spinner"
        app:layout_constraintTop_toBottomOf="@+id/ew_spinner"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/save_txv"
        android:layout_width="@dimen/EDITSATDIALOG_ITEM_WIDTH"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:text="@string/STR_SAVE"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:focusable="true"
        android:gravity="center"
        android:background="@drawable/focus_list"
        android:layout_marginEnd="@dimen/TEXT_SIZE"
        android:nextFocusUp="@id/pos_val1_txv"
        app:layout_constraintTop_toTopOf="@+id/cancel_txv"
        app:layout_constraintEnd_toStartOf="@id/cancel_txv"/>

</androidx.constraintlayout.widget.ConstraintLayout>