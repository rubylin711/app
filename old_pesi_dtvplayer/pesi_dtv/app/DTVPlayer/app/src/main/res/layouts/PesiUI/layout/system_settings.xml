<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="@dimen/MAIN_LAYOUT_ALPHA"
    android:layout_margin="0dp"
    android:background="@drawable/bg"
    tools:context="com.prime.dtvplayer.Activity.SystemSettingsActivity">


    <include
        android:id="@+id/systemSettingsTitleLayout"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="@id/title_limit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/systemSettingsHelpLayout"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/help" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/title_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />

    <TextView
        android:id="@+id/idStartupCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/STR_STARTUP_CHANNEL"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toTopOf="@+id/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_limit"
        app:layout_constraintVertical_bias="@dimen/WIDGET_TOP"
        app:layout_constraintHorizontal_bias="@dimen/WIDGET_START"/>

    <TextView
        android:id="@+id/idBannerDisplayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_BANNER_DISPLAY_TIME"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/idStartupCh"
        app:layout_constraintTop_toBottomOf="@+id/idStartupCh" />

    <TextView
        android:id="@+id/idOsdTransparency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_OSD_TRANSPARENCY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/idBannerDisplayTime"
        app:layout_constraintTop_toBottomOf="@+id/idBannerDisplayTime" />

    <TextView
        android:id="@+id/idDeepStandbyAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_DEEP_STANDBY_AFTER"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/idOsdTransparency"
        app:layout_constraintTop_toBottomOf="@+id/idOsdTransparency" />

    <TextView
        android:id="@+id/idAutoStandbyAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_AUTO_STANDBY_AFTER"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/idDeepStandbyAfter"
        app:layout_constraintTop_toBottomOf="@+id/idDeepStandbyAfter" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/selectboxLeft_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/WIDGET_CENTER" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/selectboxRight_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/WIDGET_END" />

    <!--
    <Spinner
        android:id="@+id/valStartupCh"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="0dp"
        android:background="@drawable/selectbox"
        android:entries="@array/STR_STARTUP_CHANNEL_ARY"
        android:textSize="@dimen/TEXT_SIZE"
        android:dropDownSelector="@drawable/drop_down_selector"
        app:layout_constraintBottom_toBottomOf="@+id/idStartupCh"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/idStartupCh" />

    -->
    <Spinner
        android:id="@+id/valOsdTransparency"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="0dp"
        android:background="@drawable/selectbox"
        android:entries="@array/STR_OSD_TRANSPARENCY_ARY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:dropDownSelector="@drawable/drop_down_selector"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/idOsdTransparency"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/idOsdTransparency" />

    <Spinner
        android:id="@+id/valBannerDisplayTime"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="0dp"
        android:background="@drawable/selectbox"
        android:entries="@array/STR_BANNER_DISPLAY_TIME_ARY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:dropDownSelector="@drawable/drop_down_selector"
        app:layout_constraintBottom_toBottomOf="@+id/idBannerDisplayTime"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/idBannerDisplayTime" />

    <Spinner
        android:id="@+id/valDeepStandbyAfter"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="0dp"
        android:background="@drawable/selectbox"
        android:entries="@array/STR_DEEP_STANDBY_AFTER_ARY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="gone"
        android:dropDownSelector="@drawable/drop_down_selector"
        app:layout_constraintBottom_toBottomOf="@+id/idDeepStandbyAfter"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/idDeepStandbyAfter" />

    <Spinner
        android:id="@+id/valAutoStandbyAfter"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="0dp"
        android:background="@drawable/selectbox"
        android:entries="@array/STR_AUTO_STANDBY_AFTER_ARY"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:visibility="gone"
        android:dropDownSelector="@drawable/drop_down_selector"
        app:layout_constraintBottom_toBottomOf="@+id/idAutoStandbyAfter"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/idAutoStandbyAfter" />
    <!--
    -->
    <TextView
        android:id="@+id/startonchannlTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:background="@drawable/selectbox"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="@string/STR_LAST_WATCHED"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/idStartupCh"
        app:layout_constraintEnd_toStartOf="@+id/selectboxRight_v"
        app:layout_constraintStart_toStartOf="@+id/selectboxLeft_v"
        app:layout_constraintTop_toTopOf="@+id/idStartupCh" />

</androidx.constraintlayout.widget.ConstraintLayout>
