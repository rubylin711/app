<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mtest.activity.SmartcardActivity">

    <TextView
        android:id="@+id/tv_item13_title"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="@string/str_test_item_smartcard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item13_smartcard_idx_1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_rectangle_blue_bright"
        android:gravity="center"
        android:text="@string/str_num_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item13_title" />

    <TextView
        android:id="@+id/tv_item13_smartcard_1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:background="@drawable/shape_rectangle_fail"
        android:gravity="center"
        android:text="ATR fail"
        app:layout_constraintStart_toEndOf="@+id/tv_item13_smartcard_idx_1"
        app:layout_constraintTop_toTopOf="@+id/tv_item13_smartcard_idx_1" />

    <TextView
        android:id="@+id/tv_fail_count"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/shape_rectangle_fail"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_item13_smartcard_1"
        app:layout_constraintStart_toEndOf="@+id/tv_item13_smartcard_1" />

</androidx.constraintlayout.widget.ConstraintLayout>
