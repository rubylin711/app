<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pvr_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="@dimen/MAIN_LAYOUT_ALPHA"
    android:background="@color/colorBlack"
    android:visibility="visible"
    tools:context="com.prime.dtvplayer.Activity.RecordListActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_title_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_help_guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />

    <include
        android:id="@+id/pvrTitle"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pvr_title_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/pvrHelp"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pvr_help_guideline" />

    <include
        android:id="@+id/pvr_banner"
        layout="@layout/pvrbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/TITLE_EDGE" />

    <TextView
        android:id="@+id/left_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toTopOf="@+id/pvrHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvrTitle"
        app:layout_constraintVertical_bias="@dimen/WIDGET_TOP" />

    <TextView
        android:id="@+id/right_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toTopOf="@+id/pvrHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvrTitle"
        app:layout_constraintVertical_bias="@dimen/WIDGET_TOP" />

    <TextView
        android:id="@+id/rec_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="00:00 00/00/00"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/rec_date_str"
        app:layout_constraintStart_toEndOf="@id/rec_date_str"
        app:layout_constraintTop_toTopOf="@+id/rec_date_str"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/rec_date_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="@string/STR_REC_DATE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/pvr_program_name"
        app:layout_constraintStart_toStartOf="@id/pvr_video_frame" />

    <TextView
        android:id="@+id/file_size_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="@string/STR_FILE_SIZE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toTopOf="@+id/hd_free_size_str"
        app:layout_constraintStart_toStartOf="@id/left_side" />

    <TextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0 MB"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toBottomOf="@+id/file_size_str"
        app:layout_constraintStart_toEndOf="@id/file_size_str"
        app:layout_constraintTop_toTopOf="@+id/file_size_str"
        tools:ignore="HardcodedText" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/file_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="center_horizontal|top"
        android:text="@string/STR_FILE_LIST"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TITLE_SIZE"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/rec_list_layout"
        app:layout_constraintEnd_toEndOf="@id/rec_list_layout"
        app:layout_constraintStart_toStartOf="@id/rec_list_layout" />

    <!--<ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@android:color/black"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="@id/rec_list_layout"
        app:layout_constraintBottom_toBottomOf="@id/rec_list_layout"
        app:layout_constraintStart_toStartOf="@id/rec_list_layout"
        app:layout_constraintEnd_toEndOf="@id/rec_list_layout"/>-->

    <TextView
        android:id="@+id/pvr_rec_list_txvLoading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/STR_LOADING"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintTop_toTopOf="@id/rec_list_layout"
        app:layout_constraintBottom_toBottomOf="@+id/rec_list_layout"
        app:layout_constraintStart_toStartOf="@id/rec_list_layout"
        app:layout_constraintEnd_toEndOf="@id/rec_list_layout"/>

    <ProgressBar
        android:id="@+id/pvr_rec_list_prgLoading"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="90dp"
        app:layout_constraintTop_toTopOf="@id/rec_list_layout"
        app:layout_constraintBottom_toBottomOf="@+id/rec_list_layout"
        app:layout_constraintStart_toStartOf="@id/rec_list_layout"
        app:layout_constraintEnd_toEndOf="@id/rec_list_layout" />

    <LinearLayout
        android:id="@+id/rec_list_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/file_size_str"
        app:layout_constraintEnd_toEndOf="@id/pvr_center"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/left_side"
        app:layout_constraintTop_toTopOf="@+id/left_side"
        app:layout_constraintVertical_bias="0">

        <com.prime.dtvplayer.View.PvrRecyclerView
            android:id="@+id/pvr_rec_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:scrollbars="vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/empty_file_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/STR_EMPTY_FILE_LIST"
        android:textColor="@android:color/white"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/file_size_str"
        app:layout_constraintEnd_toEndOf="@id/rec_list_layout"
        app:layout_constraintStart_toStartOf="@id/rec_list_layout"
        app:layout_constraintTop_toTopOf="@+id/rec_list_layout" />

    <!--<LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@id/left_side"
        app:layout_constraintTop_toTopOf="@id/left_side"
        app:layout_constraintEnd_toEndOf="@id/pvr_center"
        app:layout_constraintBottom_toTopOf="@+id/file_size_str">
        <com.prime.dtvplayer.View.CustomRecyclerView
            android:id="@+id/pvr_rec_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>-->


    <!--<include layout="@layout/pvr_speed"
        android:id="@+id/pvr_speed_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->
    <!---->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pvr_video_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/pvr_video_frame"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/pvr_center_hor"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="@id/right_side"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/pvr_center"
        app:layout_constraintTop_toTopOf="@id/rec_list_layout"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <SurfaceView
            android:id="@+id/pvr_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/pvr_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/PVR_TEXT_HEIGHT"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/pvr_video_frame"
            app:layout_constraintEnd_toEndOf="@id/pvr_video_frame"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pvr_center_hor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pvr_control_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/pvr_control_panel"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/pvr_progressBar"
        app:layout_constraintEnd_toEndOf="@id/pvr_video_frame"
        app:layout_constraintStart_toStartOf="@id/pvr_video_frame"
        app:layout_constraintTop_toBottomOf="@+id/pvr_video_frame">

        <!--android:src="@drawable/pvr_previous_file_n"-->
        <ImageView
            android:id="@+id/pre_file"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/pvr_previous_file_n"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toStartOf="@+id/backward"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/backward"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/pvr_backward_n"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toStartOf="@+id/play"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pre_file"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/pvr_play_n"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toStartOf="@+id/pause"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/backward"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/pvr_pause_n"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toStartOf="@+id/stop"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/play"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/stop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/pvr_stop_n"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toStartOf="@+id/foward"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/pause"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/foward"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/pvr_foward_n"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toStartOf="@+id/next_file"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/stop"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/next_file"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:background="@drawable/pvr_next_file_n"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/foward"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--android:background="@android:color/black"-->
    <ProgressBar
        android:id="@+id/pvr_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="false"
        app:layout_constraintBottom_toTopOf="@+id/pvr_time_str"
        app:layout_constraintEnd_toEndOf="@id/pvr_video_frame"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/pvr_video_frame" />

    <TextView
        android:id="@+id/hd_total_size_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_HD_TOTAL_SIZE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/pvr_help_guideline"
        app:layout_constraintStart_toStartOf="@id/left_side" />

    <TextView
        android:id="@+id/hd_free_size_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_HD_FREE_SIZE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/hd_total_size_str"
        app:layout_constraintStart_toStartOf="@id/left_side" />

    <TextView
        android:id="@+id/pvr_program_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Program Name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="visible"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/partentTXV"
        app:layout_constraintStart_toStartOf="@id/pvr_video_frame"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/pvr_time_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_PVR_TIME"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toTopOf="@+id/rec_date_str"
        app:layout_constraintStart_toStartOf="@id/pvr_video_frame" />

    <TextView
        android:id="@+id/pvr_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="00:00:00"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toBottomOf="@+id/pvr_time_str"
        app:layout_constraintStart_toEndOf="@id/pvr_time_str"
        app:layout_constraintTop_toTopOf="@+id/pvr_time_str"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/pvr_hd_free_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0 MB"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/hd_free_size_str"
        app:layout_constraintStart_toEndOf="@id/hd_free_size_str"
        app:layout_constraintTop_toTopOf="@+id/hd_free_size_str"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/pvr_hd_total_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0 MB"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/hd_total_size_str"
        app:layout_constraintStart_toEndOf="@id/hd_total_size_str"
        app:layout_constraintTop_toTopOf="@+id/hd_total_size_str"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/partentTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/STR_PVR_PARENTAL_RATE"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintBottom_toTopOf="@+id/pvr_help_guideline"
        app:layout_constraintStart_toStartOf="@+id/pvr_program_name" />

    <TextView
        android:id="@+id/rateTXV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/PVR_TEXT_HEIGHT"
        app:layout_constraintStart_toEndOf="@+id/partentTXV"
        app:layout_constraintTop_toTopOf="@+id/partentTXV"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_LEFT_EDGE"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/epg_info_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/banner"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/pvrHelp"
        app:layout_constraintTop_toBottomOf="@+id/pvrTitle"
        app:layout_constraintEnd_toEndOf="@+id/pvr_center"
        app:layout_constraintStart_toStartOf="@+id/left">

        <TextView
            android:id="@+id/epg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE"
            android:text="@string/STR_DETAILED_PROGRAM_INFO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/epg_title_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/title_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epg_title"
            android:contentDescription="@string/STR_TODO" />

        <TextView
            android:id="@+id/epg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="epg_time"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/epg_title_line"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/epg_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="epg_event_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE"
            app:layout_constraintStart_toEndOf="@+id/epg_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/epg_time"
            app:layout_constraintHorizontal_bias="0"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/epg_not_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/STR_DETAIL_NOT_FOUND"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
