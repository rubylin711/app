<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="250dp"
    android:background="@drawable/banner">

    <TextView
        android:id="@+id/stopPVRDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/VIEW_HEIGHT"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/STR_STOP_RECORDING"
        android:textColor="@android:color/white"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/oklisttitlelineIGV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/title_line"
        android:contentDescription="@string/STR_TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopPVRDialogTitle" />

    <TextView
        android:id="@+id/stopMsgTXV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/LIST_VIEW_HEIGHT"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/STR_SELECT_CHANNEL_TO_STOP_RECORDING"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/oklisttitlelineIGV" />

    <Button
        android:id="@+id/cancelBTN"
        android:layout_width="0dp"
        android:layout_height="@dimen/LIST_VIEW_HEIGHT"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/item_selector"
        android:text="@string/STR_CANCEL"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopMsgTXV" />

    <Button
        android:id="@+id/stopBTN"
        android:layout_width="0dp"
        android:layout_height="@dimen/LIST_VIEW_HEIGHT"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_selector"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="@+id/cancelBTN"
        app:layout_constraintStart_toStartOf="@+id/cancelBTN"
        app:layout_constraintTop_toBottomOf="@+id/cancelBTN" />
</androidx.constraintlayout.widget.ConstraintLayout>
