<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="@dimen/MAIN_LAYOUT_ALPHA"
    android:background="@drawable/bg"
    tools:context=".Activity.IRDInfoActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/title_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/infoGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/WIDGET_CENTER" />

    <include
        android:id="@+id/TitleLayout"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="@id/title_limit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/irdSWTXV"
        android:text="@string/str_ird_sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toTopOf="@+id/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="@dimen/WIDGET_START"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_limit"
        app:layout_constraintVertical_bias="@dimen/WIDGET_TOP" />

    <TextView
        android:id="@+id/irdSwInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/irdSWTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/irdSWTXV" />

    <TextView
        android:id="@+id/buidlDateTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/str_build_date"
        app:layout_constraintStart_toStartOf="@+id/irdSWTXV"
        app:layout_constraintTop_toBottomOf="@+id/irdSWTXV" />

    <TextView
        android:id="@+id/buidlDateInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/buidlDateTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/buidlDateTXV" />

    <TextView
        android:id="@+id/chipIDTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        android:text="@string/str_chip_id"
        app:layout_constraintStart_toStartOf="@+id/buidlDateTXV"
        app:layout_constraintTop_toBottomOf="@+id/buidlDateTXV" />

    <TextView
        android:id="@+id/chipIDInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/chipIDTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/chipIDTXV" />

    <TextView
        android:id="@+id/snTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/str_sn"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/chipIDTXV"
        app:layout_constraintTop_toBottomOf="@+id/chipIDTXV" />

    <TextView
        android:id="@+id/snInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/snTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/snTXV" />

    <TextView
        android:id="@+id/caVersionTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/str_ca_version"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/snTXV"
        app:layout_constraintTop_toBottomOf="@+id/snTXV" />

    <TextView
        android:id="@+id/caVersionInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/caVersionTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/caVersionTXV" />

    <TextView
        android:id="@+id/scNumberTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/str_sc_number"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/caVersionTXV"
        app:layout_constraintTop_toBottomOf="@+id/caVersionTXV" />

    <TextView
        android:id="@+id/scNumberInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/scNumberTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/scNumberTXV" />

    <TextView
        android:id="@+id/pairingStatusTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/str_pairing_status"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/scNumberTXV"
        app:layout_constraintTop_toBottomOf="@+id/scNumberTXV" />

    <TextView
        android:id="@+id/pairingStatusInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/pairingStatusTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/pairingStatusTXV" />

    <TextView
        android:id="@+id/groupMTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_group_m"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/pairingStatusTXV"
        app:layout_constraintTop_toBottomOf="@+id/pairingStatusTXV" />

    <TextView
        android:id="@+id/groupMInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/groupMTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/groupMTXV" />

    <TextView
        android:id="@+id/loactionTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/STR_LOCATION_INFO"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/groupMTXV"
        app:layout_constraintTop_toBottomOf="@+id/groupMTXV" />

    <TextView
        android:id="@+id/loactionInfoTXV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintBottom_toBottomOf="@+id/loactionTXV"
        app:layout_constraintStart_toStartOf="@+id/infoGuideline"
        app:layout_constraintTop_toTopOf="@+id/loactionTXV" />

</androidx.constraintlayout.widget.ConstraintLayout>