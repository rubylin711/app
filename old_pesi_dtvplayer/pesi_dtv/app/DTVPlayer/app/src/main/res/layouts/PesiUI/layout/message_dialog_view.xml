<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MessageDialogView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NO Subtitles
    <android.support.constraint.Guideline android:id="@+id/verStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <android.support.constraint.Guideline android:id="@+id/verEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />
    -->

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/messageDialogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/full_black_bg_with_frame">

        <TextView
            android:id="@+id/messageDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/STR_INFO"
            android:textColor="@android:color/white"
            android:textSize="@dimen/TEXT_SIZE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/messageDialog_TitleLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/gradient_title_line"
            android:contentDescription="@string/STR_TODO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageDialogTitle" />

        <TextView
            android:id="@+id/messageDialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:text="@string/STR_NULL"
            android:textColor="@android:color/white"
            android:textSize="@dimen/TEXT_SIZE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/messageDialog_TitleLine" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>