<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.prime.dtvplayer.TestMiddleware.TestAntActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTANT_GUIDELINE_RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_RIGHT_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTANT_GUIDELINE_LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/SCREEN_LEFT_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTANT_GUIDELINE_CENTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTANT_GUIDELINE_TITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/TITLE_EDGE" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ID_TESTANT_GUIDELINE_HELP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/HELP_EDGE" />


    <include
        android:id="@+id/ID_TESTANT_LAYOUT_TITLE"
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="@id/ID_TESTANT_GUIDELINE_TITLE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/ID_TESTANT_LAYOUT_HELP"
        layout="@layout/activity_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ID_TESTANT_GUIDELINE_HELP" />

    <TextView
        android:id="@+id/ID_TESTANT_TXV_INPUT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical|horizontal"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/ID_TESTANT_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTANT_TXV_OUTPUT"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ID_TESTANT_GUIDELINE_CENTER"
        app:layout_constraintTop_toTopOf="@+id/ID_TESTANT_GUIDELINE_TITLE" />

    <TextView
        android:id="@+id/ID_TESTANT_TXV_OUTPUT"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical|horizontal"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/ID_TESTANT_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@+id/ID_TESTANT_GUIDELINE_RIGHT"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ID_TESTANT_TXV_INPUT"
        app:layout_constraintTop_toTopOf="@+id/ID_TESTANT_GUIDELINE_TITLE" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/ID_TESTANT_GUIDELINE_HELP"
        app:layout_constraintEnd_toStartOf="@id/ID_TESTANT_GUIDELINE_CENTER"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/ID_TESTANT_GUIDELINE_LEFT"
        app:layout_constraintTop_toBottomOf="@id/ID_TESTANT_GUIDELINE_TITLE"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ID_TESTANT_BTN_ANTINFOGET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnAntInfoGet_OnClick"
                android:text="AntInfoGet()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTANT_BTN_ANTINFOGETLIST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnAntInfoGetList_OnClick"
                android:text="AntInfoGetList()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTANT_BTN_ANTINFOSAVE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnAntInfoSave_OnClick"
                android:text="AntInfoSave()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTANT_BTN_ANTINFOSAVELIST"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnAntInfoSaveList_OnClick"
                android:text="AntInfoSaveList()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />

            <Button
                android:id="@+id/ID_TESTANT_BTN_ANTINFODELETE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:onClick="BtnAntInfoDelete_OnClick"
                android:text="AntInfoDelete()"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/TEXT_SIZE" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
