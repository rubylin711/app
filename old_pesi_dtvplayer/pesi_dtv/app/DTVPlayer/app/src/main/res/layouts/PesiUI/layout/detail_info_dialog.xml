<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowBackground="@android:color/transparent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <ImageView
        android:id="@+id/bgIGV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/full_black_bg_with_frame"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/titleLineIGV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/gradient_title_line"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/detailTitleTXV" />

    <TextView
        android:id="@+id/detailTitleTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DETAILINFODIALOG_TXV_HEIGHT"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <TextView
        android:id="@+id/startTimeTXV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DETAILINFODIALOG_TXV_HEIGHT"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintStart_toStartOf="@+id/detailTitleTXV"
        app:layout_constraintTop_toBottomOf="@+id/detailTitleTXV" />

    <TextView
        android:id="@+id/eventNameTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DETAILINFODIALOG_TXV_HEIGHT"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="@+id/detailTitleTXV"
        app:layout_constraintStart_toEndOf="@+id/startTimeTXV"
        app:layout_constraintTop_toTopOf="@+id/startTimeTXV" />

    <!--TextView
        android:id="@+id/shortEventTXV"
        android:layout_width="0dp"
        android:layout_height="@dimen/DETAILINFODIALOG_TXV_HEIGHT"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TEXT_SIZE"
        app:layout_constraintEnd_toEndOf="@+id/detailTitleTXV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/startTimeTXV"
        app:layout_constraintTop_toBottomOf="@+id/startTimeTXV" /-->

    <ScrollView
        android:id="@+id/eventScrollSCV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/bgIGV"
        app:layout_constraintEnd_toEndOf="@+id/eventNameTXV"
        app:layout_constraintStart_toStartOf="@+id/startTimeTXV"
        app:layout_constraintTop_toBottomOf="@+id/eventNameTXV">

        <TextView
            android:id="@+id/detailTXV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/TEXT_SIZE" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>