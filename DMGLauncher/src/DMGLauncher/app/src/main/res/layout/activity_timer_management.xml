<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tbc_wallpaper">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_usb_information"
        android:layout_width="0dp"
        android:layout_height="155dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ProgressBar
            android:id="@+id/timer_hdd_space_progress"
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:focusable="false"
            android:progress="0"
            android:max="100"
            style="@style/Theme.DMGLauncher.MiniEPG.Progress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/timer_hdd_space_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text=""
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintTop_toTopOf="@id/timer_hdd_space_progress"
            app:layout_constraintStart_toEndOf="@id/timer_hdd_space_progress"
            app:layout_constraintBottom_toBottomOf="@id/timer_hdd_space_progress"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.prime.dmg.launcher.EPG.MiddleFocusRecyclerView
        android:id="@+id/timer_book_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="@id/timer_usb_information"
        app:layout_constraintEnd_toEndOf="@id/timer_usb_information"
        app:layout_constraintTop_toBottomOf="@id/timer_usb_information"
        app:layout_constraintBottom_toTopOf="@id/timer_hint_banner" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_hint_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants">

        <com.prime.dmg.launcher.CustomView.TimeViewKeyHint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/timer_hint_container"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/program_record_icon"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/hint_green"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/program_record_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:text="@string/hint_program_record"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/hint_red"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:text="@string/hint_new_timer"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"/>
            <ImageView
                android:id="@+id/bottom_back_icon"
                android:layout_width="@dimen/mini_epg_hint_info_lock_icon_width"
                android:layout_height="18dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/hint_back"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/bottom_back_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/hint_rcu_cancel"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"/>
            <ImageView
                android:id="@+id/cancel_timer_icon"
                android:layout_width="@dimen/mini_epg_hint_info_lock_icon_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:visibility="visible"
                android:scaleType="centerInside"
                android:src="@drawable/hint_blue"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/cancel_timer_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:visibility="visible"
                android:text="@string/hint_cancel_timer"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conflict_timer_layer"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:background="@drawable/gradient_panel"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/conflict_timer_title"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lo_new_timer_dialog_text_size"
            android:layout_marginTop="30dp"
            android:text="@string/reserve_timer_conflict"
            app:layout_constraintTop_toTopOf="@id/conflict_timer_layer"
            app:layout_constraintStart_toStartOf="@id/conflict_timer_layer"
            app:layout_constraintEnd_toEndOf="@id/conflict_timer_layer"/>

        <TextView
            android:id="@+id/conflict_timer_new_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lo_new_timer_dialog_text_size"
            android:text="test text"
            android:paddingTop="@dimen/lo_new_timer_dialog_padding_up"
            android:paddingBottom="@dimen/lo_new_timer_dialog_padding_up"
            android:focusable="true"
            android:background="@drawable/list_item_zapping_bg_selector"
            android:gravity="center"
            android:nextFocusDown="@id/conflict_timer_old_item"
            android:nextFocusRight="@id/conflict_timer_new_item"
            android:nextFocusUp="@id/conflict_timer_new_item"
            android:nextFocusLeft="@id/conflict_timer_new_item"
            app:layout_constraintBottom_toTopOf="@id/conflict_timer_old_item"
            app:layout_constraintStart_toStartOf="@id/conflict_timer_layer"
            app:layout_constraintEnd_toEndOf="@id/conflict_timer_layer"/>

        <TextView
            android:id="@+id/conflict_timer_old_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lo_new_timer_dialog_text_size"
            android:layout_marginBottom="20dp"
            android:text="test text"
            android:paddingTop="@dimen/lo_new_timer_dialog_padding_up"
            android:paddingBottom="@dimen/lo_new_timer_dialog_padding_up"
            android:focusable="true"
            android:background="@drawable/list_item_zapping_bg_selector"
            android:gravity="center"
            android:nextFocusDown="@id/conflict_timer_old_item"
            android:nextFocusRight="@id/conflict_timer_old_item"
            android:nextFocusUp="@id/conflict_timer_new_item"
            android:nextFocusLeft="@id/conflict_timer_old_item"
            app:layout_constraintStart_toStartOf="@id/conflict_timer_layer"
            app:layout_constraintEnd_toEndOf="@id/conflict_timer_layer"
            app:layout_constraintBottom_toBottomOf="@id/conflict_timer_layer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>