<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/lo_rank_item"
        android:background="@drawable/ranking_panel"
        android:layout_width="@dimen/rank_item_w"
        android:layout_height="@dimen/rank_item_h"
        android:layout_alignParentBottom="true"
        android:focusable="false">
        <TextView
            android:id="@+id/lo_rank_item_ratio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rank_item_text_h"
            android:layout_marginStart="@dimen/rank_item_text_margin_start"
            android:focusable="false"
            android:text="@string/rank_ratio2"
            android:textSize="@dimen/rank_item_text_size"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:shadowColor="@color/black"
            android:shadowDx="1" 
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <LinearLayout
            android:id="@+id/lo_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/rank_item_line_margin"
            android:layout_marginEnd="@dimen/rank_item_line_margin"
            android:layout_below="@+id/lo_rank_item_ratio"
            android:focusable="false"
            android:background="@color/opacity_white"
            android:orientation="horizontal" />
        <ImageView
            android:id="@+id/lo_rank_item_channel_icon"
            android:layout_width="@dimen/rank_item_channel_icon_w"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_below="@+id/lo_line"
            android:focusable="false"
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/lo_rank_item_channel_icon"
            android:layout_below="@+id/lo_line"
            android:focusable="false">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/lo_rank_item_program_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textSize="@dimen/rank_item_program_text_size"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:lines="1"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"/>
                <TextView
                    android:id="@+id/lo_rank_item_channel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textSize="@dimen/rank_item_channel_text_size"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:lines="1" 
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1" 
                    android:shadowRadius="2"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lo_rank_item_select_bar"
        android:layout_width="@dimen/rank_item_w"
        android:layout_height="@dimen/rank_item_select_bar_h"
        android:layout_above="@+id/lo_rank_item"
        android:focusable="false"
        android:background="@drawable/gradient_focus"
        android:visibility="invisible"
        android:orientation="vertical"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rank_item_hint_margin"
        android:layout_above="@+id/lo_rank_item_select_bar"
        android:focusable="false"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lo_rank_item_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="@dimen/rank_item_hint_text_size"
            android:textColor="@color/white"
            android:text="@string/rank_title2"
            android:shadowColor="@color/black"
            android:shadowDx="1" 
            android:shadowDy="1" 
            android:shadowRadius="2"/>
        <TextView
            android:id="@+id/lo_rank_item_hint_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rank_item_hint_num_margin_start"
            android:focusable="false"
            android:text="3"
            android:textSize="@dimen/rank_item_hint_num_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</RelativeLayout>