<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lo_hottest_app_item"
    android:layout_width="@dimen/hottest_app_item_size"
    android:layout_height="@dimen/hottest_app_item_height"
    android:focusable="true"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/lo_hottest_app_item_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hottest_app_item_size"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/lo_hottest_app_item_icon_mask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hottest_app_item_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/circle_hottest_selector"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/lo_hottest_app_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hottest_app_item_margin_1_5dp"
        android:layout_below="@+id/lo_hottest_app_item_icon"
        android:textSize="@dimen/hottest_app_item_16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:singleLine="true"/>
</RelativeLayout>
