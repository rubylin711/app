<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lo_epg_lnrl_frame1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lo_epg_lnrl_frame1_height"
        android:layout_marginStart="@dimen/lo_epg_lnrl_frame1_marginleft"
        android:layout_marginTop="@dimen/lo_epg_lnrl_frame1_margintop"
        android:layout_marginEnd="@dimen/lo_epg_lnrl_frame1_marginright">
        <RelativeLayout
            android:layout_width="@dimen/lo_epg_frame1_sub_rltvl_width"
            android:layout_height="match_parent">
            <View
                android:id="@+id/epg_blocked_channel_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_blocked_channel"/>
            <TextView
                android:id="@+id/lo_epg_textv_unlock_title_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/lo_epg_textv_unlock_title_text1_marginleft"
                android:layout_marginBottom="@dimen/lo_epg_textv_unlock_title_text1_marginbottom"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/lo_epg_textv_unlock_title_text1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/lo_epg_textv_unlock_title_text3_textsize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lo_epg_textv_unlock_title_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/lo_epg_textv_unlock_title_text2_marginleft"
                android:layout_marginEnd="@dimen/lo_epg_textv_unlock_title_text2_marginright"
                android:layout_marginBottom="@dimen/lo_epg_textv_unlock_title_text2_marginbottom"
                android:layout_toEndOf="@id/lo_epg_textv_unlock_title_text1"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textColor="@color/pvr_red_color"
                android:textSize="@dimen/lo_epg_textv_unlock_title_text2_textsize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lo_epg_textv_unlock_title_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/lo_epg_textv_unlock_title_text3_marginbottom"
                android:layout_toEndOf="@id/lo_epg_textv_unlock_title_text2"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/lo_epg_textv_unlock_title_text3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/lo_epg_textv_unlock_title_text3_textsize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lo_epg_textv_unlock_pass_text"
                android:layout_width="@dimen/lo_epg_textv_unlock_pass_text_width"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/lo_epg_textv_unlock_pass_text_marginleft"
                android:layout_marginBottom="@dimen/lo_epg_textv_unlock_pass_text_marginbottom"
                android:layout_toEndOf="@id/lo_epg_textv_unlock_title_text3"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/lo_epg_textv_unlock_pass_text_textsize"
                android:visibility="gone" />

            <View
                android:id="@+id/lo_epg_view_pass_text_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lo_epg_view_pass_text_bar_height"
                android:layout_alignStart="@id/lo_epg_textv_unlock_pass_text"
                android:layout_alignEnd="@id/lo_epg_textv_unlock_pass_text"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/lo_epg_view_pass_text_bar_marginbottom"
                android:background="@color/opacity_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lo_epg_textv_pass_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/lo_epg_textv_unlock_pass_text"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:text="@string/lo_epg_textv_pass_fail_incorrect_pass"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/lo_epg_textv_pass_fail_textsize"
                android:visibility="gone"
                android:singleLine="true" />
        </RelativeLayout>
        <com.prime.dmg.launcher.EPG.EpgDetailView
            android:id="@+id/lo_epg_view_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/lo_epg_view_detail_marginleft" />
    </LinearLayout>
    <com.prime.dmg.launcher.EPG.ListLayer
        android:id="@+id/lo_epg_list_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/lo_epg_frml_content_marginleft"
        android:layout_below="@id/lo_epg_lnrl_frame1"/>
