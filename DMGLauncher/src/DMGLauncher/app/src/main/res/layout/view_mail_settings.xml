<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/lo_mail_settings_textv_title"
        android:textSize="@dimen/lo_mail_settings_textv_title_textsize"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lo_mail_settings_textv_title_marginleft"
        android:text="@string/mail_setting"/>
    <TextView
        android:id="@+id/lo_mail_settings_textv_hint"
        android:textSize="@dimen/lo_mail_settings_textv_hint_textsize"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lo_mail_settings_textv_hint_marginleft"
        android:text="@string/mail_setting_hint"/>
    <RelativeLayout
        android:background="@drawable/mail_list_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">
        <com.prime.dmg.launcher.EPG.MiddleFocusRecyclerView
            android:id="@+id/lo_mail_settings_rcv_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>