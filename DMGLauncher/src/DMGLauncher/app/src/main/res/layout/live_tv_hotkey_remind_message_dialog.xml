<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/live_tv_dialog_message_width"
        android:layout_height="@dimen/live_tv_dialog_message_height"
        android:background="@color/remind_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/lo_live_tv_hotkey_remind_dialog_msg_text"
            android:textSize="@dimen/live_tv_dialog_hotkey_hint_text_size"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/live_tv_dialog_message_msg_margin"
            android:layout_marginEnd="@dimen/live_tv_dialog_message_msg_margin"
            android:layout_gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/live_tv_dialog_message_hint_margin"
            android:layout_marginBottom="@dimen/live_tv_dialog_message_hint_margin"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/live_tv_dialog_message_hint_icon_size"
                android:layout_height="@dimen/live_tv_dialog_message_hint_icon_size"
                android:layout_marginEnd="@dimen/live_tv_dialog_message_hint_icon_margin"
                android:src="@drawable/hint_back"/>
            <TextView
                android:text="@string/hint_rcu_cancel"
                android:textSize="@dimen/live_tv_dialog_message_hint_text_size"
                android:textColor="@color/dark_gray"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>