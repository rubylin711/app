<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="@dimen/qr_code_dialog_width_height"
        android:layout_height="@dimen/qr_code_dialog_width_height"
        android:layout_centerInParent="true"
        android:background="@color/qr_code_dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/lo_qr_code_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qr_code_dialog_title_margin"
            android:layout_marginStart="@dimen/qr_code_dialog_title_margin_start_end"
            android:layout_marginEnd="@dimen/qr_code_dialog_title_margin_start_end"
            android:textSize="@dimen/qr_code_dialog_title_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/rec_program_qrcode"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/lo_qr_code_dialog_image"
            android:layout_width="@dimen/qr_code_dialog_image_size"
            android:layout_height="@dimen/qr_code_dialog_image_size"
            android:layout_marginTop="@dimen/qr_code_dialog_image_margin"
            android:layout_below="@+id/lo_qr_code_dialog_title"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/qr_code_dialog_hint_margin"
            android:layout_marginBottom="@dimen/qr_code_dialog_hint_margin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/qr_code_dialog_hint_icon_size"
                android:layout_height="@dimen/qr_code_dialog_hint_icon_size"
                android:layout_marginEnd="@dimen/qr_code_dialog_hint_icon_margin"
                android:src="@drawable/hint_back"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/qr_code_dialog_hint_text_size"
                android:textColor="@color/darker_gray"
                android:text="@string/hint_rcu_cancel"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>