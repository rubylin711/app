<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lo_memory_device_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zapping_channel_item_height"
    android:focusable="true"
    android:background="@drawable/list_item_zapping_bg_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/quick_tune_channel_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/lo_memory_device_usb_device_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lo_item_memory_device_used_marginstart"
        android:layout_gravity="center_vertical"
        android:background="@drawable/orange_gradient_btn2"
        android:text="@string/used"
        android:textSize="10sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:focusable="false"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lo_memory_device_usb_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="/mnt/sda1"
        android:textSize="@dimen/zapping_channel_item_ch_num_text_size"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:focusable="false"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintStart_toEndOf="@id/lo_memory_device_usb_device_used"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lo_memory_device_total_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="28.46 GB"
        android:textSize="@dimen/lo_new_timer_dialog_text_size"
        android:layout_marginStart="@dimen/lo_item_memory_device_total_space_marginstart"
        android:textColor="@color/white"
        android:focusable="false"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lo_memory_device_free_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="4.11 GB"
        android:textSize="@dimen/lo_new_timer_dialog_text_size"
        android:layout_marginStart="@dimen/lo_item_memory_device_free_space_marginstart"
        android:textColor="@color/white"
        android:focusable="false"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lo_memory_device_used_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="24.35 GB"
        android:textSize="@dimen/lo_new_timer_dialog_text_size"
        android:layout_marginStart="@dimen/lo_item_memory_device_used_space_marginstart"
        android:textColor="@color/white"
        android:focusable="false"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

