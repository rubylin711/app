<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lo_epg_sub_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lo_epg_sub_list_lnrl_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lo_epg_sub_list_lnrl_text_height"
        android:layout_marginLeft="@dimen/lo_epg_sub_list_lnrl_text_marginleft"
        android:layout_marginRight="@dimen/lo_epg_sub_list_lnrl_text_marginright">
        <TextView
            android:id="@+id/lo_epg_sub_list_textv_date"
            android:textSize="@dimen/lo_epg_sub_list_textv_textsize"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/lo_epg_sub_list_textv_date_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lo_epg_sub_list_textv_date_marginleft"
            android:text="@string/lo_epg_sub_list_textv_date"/>
        <TextView
            android:id="@+id/lo_epg_sub_list_textv_channel"
            android:textSize="@dimen/lo_epg_sub_list_textv_textsize"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:layout_width="@dimen/lo_epg_sub_list_textv_channel_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lo_epg_sub_list_textv_channel_marginleft"
            android:text="@string/lo_epg_sub_list_textv_channel"/>
        <TextView
            android:id="@+id/lo_epg_sub_list_textv_program"
            android:textSize="@dimen/lo_epg_sub_list_textv_textsize"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lo_epg_sub_list_textv_program_marginleft"
            android:text="@string/lo_epg_sub_list_textv_program"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lo_epg_sub_list_lnrl_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/lo_epg_sub_list_lnrl_content_marginright"
        android:layout_marginBottom="@dimen/lo_epg_sub_list_lnrl_content_marginbottom"
        android:layout_below="@id/lo_epg_sub_list_lnrl_text">
        <TextView
            android:id="@+id/lo_epg_sub_list_textv_genre"
            android:textSize="@dimen/lo_epg_sub_list_textv_genre_textsize"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/transparent_panel"
            android:layout_width="@dimen/lo_epg_sub_list_textv_genre_width"
            android:layout_height="match_parent"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />
<!--            android:layout_below="@+id/EpgTimeLine"/>-->
        <com.prime.dmg.launcher.EPG.MiddleFocusRecyclerView
            android:id="@+id/lo_epg_sub_list_rcv_date"
            android:background="@drawable/transparent_panel"
            android:layout_width="@dimen/lo_epg_sub_list_textv_date_width"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:layout_marginLeft="@dimen/lo_epg_sub_list_textv_date_marginleft"/>
        <com.prime.dmg.launcher.EPG.MiddleFocusRecyclerView
            android:id="@+id/lo_epg_sub_list_rcv_channel"
            android:background="@drawable/transparent_panel"
            android:layout_width="@dimen/lo_epg_sub_list_textv_channel_width"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:layout_marginLeft="@dimen/lo_epg_sub_list_textv_channel_marginleft"/>
        <com.prime.dmg.launcher.EPG.MiddleFocusRecyclerView
            android:id="@+id/lo_epg_sub_list_rcv_program"
            android:background="@drawable/transparent_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:layout_marginLeft="@dimen/lo_epg_sub_list_textv_program_marginleft"/>
    </LinearLayout>

    <!--
紅、綠、黃、藍、介紹
-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_epg_hot_key_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_tv_dialog_hotkey_hint_height"
        android:background="@drawable/hint_shadow"
        android:focusable="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mini_epg_hint_func_height"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/lo_epg_hot_key_hint"
            app:layout_constraintStart_toStartOf="@id/lo_epg_hot_key_hint"
            android:layout_marginBottom="30dp">

            <!--<ImageView
                android:id="@+id/lo_epg_time_hint_imgv_logo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/dmg_logo"/>-->

            <TextClock
                android:id="@+id/lo_epg_time_hint_textv_current_date"
                android:textSize="@dimen/mini_epg_hint_func_text_size"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:fontFamily="@font/custom_font"
                android:format12Hour="MM/dd"
                android:format24Hour="MM/dd"/>

            <TextClock
                android:id="@+id/lo_epg_time_hint_textv_current_week"
                android:textSize="@dimen/mini_epg_hint_func_text_size"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lo_mail_time_hint_textv_current_week_marginleft"
                android:includeFontPadding="false"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:fontFamily="@font/custom_font"
                android:format12Hour="EEEE"
                android:format24Hour="EEEE"/>
            <TextClock
                android:id="@+id/lo_epg_time_hint_textv_current_time"
                android:textSize="@dimen/mini_epg_hint_func_text_size"
                android:textColor="@android:color/white"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mini_epg_hint_func_txt_margin_end"
                android:includeFontPadding="false"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:textAllCaps="false"
                android:fontFamily="@font/custom_font"
                android:format12Hour="hh:mm"
                android:format24Hour="HH:mm"/>
            <TextClock
                android:id="@+id/lo_epg_time_hint_textv_current_ampm"
                android:textSize="@dimen/lo_mail_time_hint_textv_am_pm_textsize"
                android:textColor="@android:color/white"
                android:gravity="bottom|left"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:includeFontPadding="false"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:fontFamily="@font/custom_font"
                android:format12Hour="aa"
                android:format24Hour=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mini_epg_hint_func_height"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/lo_epg_hot_key_hint"
            app:layout_constraintEnd_toEndOf="@id/lo_epg_hot_key_hint"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp">

            <!-- 錄影 -->
            <ImageView
                android:id="@+id/lo_epg_hot_key_hint_imgv_record"
                android:layout_width="@dimen/mini_epg_hint_func_img_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/lo_epg_margin"
                android:scaleType="centerInside"
                android:visibility="gone"
                android:src="@drawable/hint_red"/>
            <TextView
                android:id="@+id/lo_epg_hot_key_hint_textv_record"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/mini_epg_hint_func_txt_margin_end"
                android:text="@string/mini_epg_record"
                android:visibility="gone"
                android:textSize="@dimen/mini_epg_hint_func_text_size"/>

            <!-- 顯示模式 -->
            <ImageView
                android:id="@+id/lo_epg_hot_key_hint_imgv_mode"
                android:layout_width="@dimen/mini_epg_hint_func_img_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/lo_epg_margin"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/hint_green"/>
            <TextView
                android:id="@+id/lo_epg_hot_key_hint_textv_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/mini_epg_hint_func_txt_margin_end"
                android:visibility="gone"
                android:text="@string/epg_display_mode"
                android:textSize="@dimen/mini_epg_hint_func_text_size"/>

            <!-- 預約提醒 -->
            <ImageView
                android:id="@+id/lo_epg_hot_key_hint_imgv_remind"
                android:layout_width="@dimen/mini_epg_hint_func_img_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/lo_epg_margin"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/hint_yellow"/>
            <TextView
                android:id="@+id/lo_epg_hot_key_hint_textv_remind"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/mini_epg_hint_func_txt_margin_end"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:text="@string/mini_epg_remind"
                android:textSize="@dimen/mini_epg_hint_func_text_size"/>

            <!-- 類別 -->
            <ImageView
                android:id="@+id/lo_epg_hot_key_hint_imgv_genre"
                android:layout_width="@dimen/mini_epg_hint_func_img_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/lo_epg_margin"
                android:scaleType="centerInside"
                android:src="@drawable/hint_blue"/>
            <TextView
                android:id="@+id/lo_epg_hot_key_hint_textv_genre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/mini_epg_hint_func_txt_margin_end"
                android:scaleType="centerInside"
                android:text="@string/mini_epg_genre"
                android:textSize="@dimen/mini_epg_hint_func_text_size"/>

            <!-- 收看 -->
            <ImageView
                android:id="@+id/lo_epg_hot_key_hint_imgv_watch"
                android:layout_width="@dimen/mini_epg_hint_func_img_width"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/lo_epg_margin"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:src="@drawable/hint_ok"/>
            <TextView
                android:id="@+id/lo_epg_hot_key_hint_textv_watch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/mini_epg_hint_func_txt_margin_end"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:text="@string/hint_rcu_watch"
                android:textSize="@dimen/mini_epg_hint_func_text_size"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lo_epg_sub_list_textv_no_data"
        android:textSize="@dimen/lo_epg_sub_list_textv_no_data_textsize"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="@dimen/lo_epg_sub_list_textv_no_data_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lo_epg_sub_list_textv_no_data_margintop"
        android:layout_marginEnd="@dimen/lo_epg_sub_list_textv_no_data_marginright"
        android:text="@string/epg_no_data"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>