<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans"
    tools:context=".Home.Recommend.Activity.SideMenuActivity">

    <!--
        Side Menu Background Space
    -->
    <LinearLayout
        android:id="@+id/lo_side_menu_background_space"
        android:layout_width="@dimen/side_menu_background_space_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/trans"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lo_side_menu_background_img">
    </LinearLayout>
    <!--
        Side Menu Background Image
    -->
    <LinearLayout
        android:id="@+id/lo_side_menu_background_img"
        android:layout_width="@dimen/side_menu_background_img_width"
        android:layout_height="0dp"
        android:background="@drawable/all_apps_shadow"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--
        Side Menu : Apps & Games
    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_side_menu_container"
        android:layout_width="@dimen/side_menu_container_width"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/side_menu_container_margin_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!--
        應用程式與遊戲
        -->
        <TextView
            android:id="@+id/lo_side_menu_app_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/side_menu_app_game_title_margin_y"
            android:text="@string/home_list_recommend_title_app_and_game"
            android:textColor="@color/white"
            android:textSize="@dimen/side_menu_app_game_title_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.prime.dmg.launcher.Home.Recommend.List.RecommendListView
            android:id="@+id/lo_side_menu_app_game_grid"
            android:background="@drawable/frame_focus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/side_menu_app_game_grid_height"
            android:layout_marginTop="@dimen/side_menu_app_game_grid_margin_y"
            android:descendantFocusability="blocksDescendants"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/lo_side_menu_app_game_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <!--
        應用程式推薦
        -->
        <TextView
            android:id="@+id/lo_side_menu_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/side_menu_app_title_margin_y"
            android:text="@string/home_list_recommend_title_app"
            android:textColor="@color/white"
            android:textSize="@dimen/side_menu_app_game_title_text_size"
            app:layout_constraintTop_toBottomOf="@id/lo_side_menu_app_game_grid"
            app:layout_constraintStart_toStartOf="parent"/>
