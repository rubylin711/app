    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--
    應用程式推薦
    -->
    <com.prime.dmg.launcher.Home.Recommend.List.RecommendListView
        android:id="@+id/lo_side_menu_app_list"
        android:background="@drawable/frame_focus"
        android:layout_width="0dp"
        android:layout_height="@dimen/side_menu_app_list_recommend_height"
        android:layout_marginTop="@dimen/side_menu_app_list_margin_y"
        android:descendantFocusability="blocksDescendants"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/lo_side_menu_container"/>
