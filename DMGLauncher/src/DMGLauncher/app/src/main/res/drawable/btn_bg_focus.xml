<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">

        <shape android:shape="rectangle">

            <stroke
                android:width="@dimen/hottest_detail_btn_width_1dp"
                android:color="@color/btn_bg_focus_stroke_red"/>

            <gradient
                android:startColor="@color/btn_bg_focus_startColor_red"
                android:endColor="@color/btn_bg_focus_endColor_red"
                android:angle="90"
                android:centerColor="@color/btn_bg_focus_centerColor_red"/>

            <padding
                android:left="@dimen/hottest_detail_btn_padding_14dp"
                android:top="@dimen/hottest_detail_btn_padding_8dp"
                android:right="@dimen/hottest_detail_btn_padding_14dp"
                android:bottom="@dimen/hottest_detail_btn_padding_8dp"/>

        </shape>

    </item>

    <item android:state_focused="false">

        <shape android:shape="rectangle">

            <stroke
                android:width="@dimen/hottest_detail_btn_width_1dp"
                android:color="@color/white"/>

        </shape>

    </item>

</selector>
