<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="15px"/>
            <gradient android:startColor="@color/pvr_red_color" android:endColor="@color/pvr_red_color" android:angle="90" android:centerColor="@color/pvr_red_color"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="15px"/>
            <gradient android:startColor="@android:color/white" android:endColor="@android:color/white" android:angle="90" android:centerColor="@android:color/darker_gray"/>
        </shape>
    </item>
</selector>
