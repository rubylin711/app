<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:start="-1dp" android:top="0dp" android:end="-1dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/pvr_red_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true" android:state_selected="true">
        <layer-list>
            <item android:start="-1dp" android:top="0dp" android:end="-1dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/pvr_red_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:start="-1dp" android:top="0dp" android:end="-1dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/pvr_red_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:start="-1dp" android:top="-1dp" android:end="-1dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="#555555"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
