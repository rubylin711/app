<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:valueFrom="1.0"
                android:valueTo="1.5"
                android:duration="10"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:valueFrom="1.0"
                android:valueTo="1.5"
                android:duration="10"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:valueFrom="1.5"
                android:valueTo="1.0"
                android:duration="10"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:valueFrom="1.5"
                android:valueTo="1.0"
                android:duration="10"/>
        </set>
    </item>
</selector>