<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lo_hottest_video_item_layer"
    android:layout_width="@dimen/hottest_video_item_layout_width"
    android:layout_height="@dimen/hottest_video_item_layout_height"
    android:focusable="true">
    <ImageView
        android:id="@+id/lo_hottest_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/lo_hottest_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/hottest_video_item_height_40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/hottest_video_item_padding_5dp"
        android:textSize="@dimen/hottest_video_item_14sp"
        android:textColor="@color/white"
        android:gravity="start|center_vertical"
        android:background="@drawable/shadow_cover_78"
        tools:ignore="RtlSymmetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <FrameLayout
        android:id="@+id/lo_hottest_rec_app_focus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/focus_frame_red"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
