<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timeshift_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_trans">

        <TextView
            android:id="@+id/start_time_timeshift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="164dp"
            android:layout_marginStart="54dp"
            android:text="00:00:00"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:focusable="false"
            android:gravity="center_vertical"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/end_time_timeshift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="164dp"
            android:layout_marginEnd="54dp"
            android:text="03:00:00"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:focusable="false"
            android:gravity="center_vertical"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/progress_buffer_timeshift"
            app:layout_constraintStart_toStartOf="@id/progress_buffer_timeshift"
            app:layout_constraintEnd_toEndOf="@id/progress_buffer_timeshift" >
            <View
                android:id="@+id/icon_rewind_forward"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginEnd="-18dp"
                android:background="@drawable/icon_timeshift_backward"
                app:layout_constraintEnd_toStartOf="@id/txv_text_X"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txv_text_X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginBottom="6dp"
                android:text="x"
                android:textSize="36sp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/icon_rewind_forward"
                app:layout_constraintBottom_toBottomOf="@id/icon_rewind_forward"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/txv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="2"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/icon_rewind_forward"
                app:layout_constraintBottom_toBottomOf="@id/icon_rewind_forward"
                app:layout_constraintStart_toEndOf="@id/txv_text_X" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar android:id="@+id/progress_buffer_timeshift"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:focusable="false"
            android:progress="66"
            android:max="100"
            style="@style/Theme.Launcher.Timeshift.Buffer.Progress"
            app:layout_constraintTop_toTopOf="@id/start_time_timeshift"
            app:layout_constraintBottom_toBottomOf="@id/start_time_timeshift"
            app:layout_constraintStart_toEndOf="@id/start_time_timeshift"
            app:layout_constraintEnd_toStartOf="@id/end_time_timeshift" />

        <ProgressBar android:id="@+id/progress_play_timeshift"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:focusable="false"
            android:progress="33"
            android:max="100"
            style="@style/Theme.Launcher.Timeshift.Play.Progress"
            app:layout_constraintTop_toTopOf="@id/progress_buffer_timeshift"
            app:layout_constraintBottom_toBottomOf="@id/progress_buffer_timeshift"
            app:layout_constraintStart_toStartOf="@id/progress_buffer_timeshift"
            app:layout_constraintEnd_toEndOf="@id/progress_buffer_timeshift" />

        <!-- focus view 1 -->
        <ImageView  android:id="@+id/focus_play_pause_timeshift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="76dp"
            android:focusable="true"
            android:focusedByDefault="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <!-- focus view 2 -->
        <ImageView  android:id="@+id/focus_rewind_timeshift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="63dp"
            android:focusable="true"
            app:layout_constraintEnd_toStartOf="@id/pause_timeshift"
            app:layout_constraintTop_toTopOf="@id/pause_timeshift"
            app:layout_constraintBottom_toBottomOf="@id/pause_timeshift"
            tools:ignore="ContentDescription" />

        <!-- focus view 3 -->
        <ImageView  android:id="@+id/focus_forward_timeshift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="63dp"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@id/pause_timeshift"
            app:layout_constraintTop_toTopOf="@id/pause_timeshift"
            app:layout_constraintBottom_toBottomOf="@id/pause_timeshift"
            tools:ignore="ContentDescription" />

        <ImageView  android:id="@+id/pause_timeshift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="76dp"
            android:visibility="visible"
            android:src="@drawable/icon_timeshift_pause"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView  android:id="@+id/play_timeshift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="76dp"
            android:visibility="invisible"
            android:src="@drawable/icon_timeshift_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView  android:id="@+id/rewind_timeshift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="63dp"
            android:visibility="visible"
            android:src="@drawable/icon_timeshift_backward"
            app:layout_constraintEnd_toStartOf="@id/pause_timeshift"
            app:layout_constraintTop_toTopOf="@id/pause_timeshift"
            app:layout_constraintBottom_toBottomOf="@id/pause_timeshift"
            tools:ignore="ContentDescription" />

        <ImageView  android:id="@+id/forward_timeshift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="63dp"
            android:visibility="visible"
            android:src="@drawable/icon_timeshift_forward"
            app:layout_constraintStart_toEndOf="@id/pause_timeshift"
            app:layout_constraintTop_toTopOf="@id/pause_timeshift"
            app:layout_constraintBottom_toBottomOf="@id/pause_timeshift"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.prime.launcher.CustomView.HintBanner
        android:id="@+id/hint_timeshift"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/otl_lite_shadow"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>