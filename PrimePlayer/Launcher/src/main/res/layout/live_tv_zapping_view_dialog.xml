<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:background="@color/trans">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/zapping_background_width"
        android:layout_height="@dimen/zapping_background_height"
        android:background="@drawable/gradient_panel"
        android:focusable="false"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout
            android:id="@+id/lo_zapping_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zapping_layout_ch_num_height"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/lo_zapping_ch_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/zapping_layout_ch_num_text_size"
                android:textColor="@color/white"
                android:focusable="false"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:layout_centerInParent="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zapping_layout_divider_height"
                android:layout_marginStart="@dimen/zapping_layout_divider_margin_x"
                android:layout_marginEnd="@dimen/zapping_layout_divider_height"
                android:layout_below="@+id/lo_zapping_ch_num"
                android:focusable="false"
                android:background="@color/opacity_thirty_white"/>
        </RelativeLayout>
        <com.prime.launcher.Home.LiveTV.Zapping.ZappingListView
            android:id="@+id/lo_zapping_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/lo_zapping_layout"
            android:layout_alignStart="@id/lo_zapping_layout"
            android:layout_alignEnd="@id/lo_zapping_layout"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/lo_zapping_layout"
            app:layout_constraintStart_toStartOf="@id/lo_zapping_layout"
            app:layout_constraintTop_toBottomOf="@id/lo_zapping_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>