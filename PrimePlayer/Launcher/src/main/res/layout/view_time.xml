<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lo_weather"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_weather_suncloud"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/lo_air_temperature"
        android:layout_width="@dimen/time_view_air_temperature_width"
        android:layout_height="wrap_content"
        android:text="23oC"
        android:textSize="@dimen/time_view_text_size"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:gravity="bottom|center_horizontal"
        android:visibility="gone"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        tools:ignore="HardcodedText" />
    <TextClock
        android:id="@+id/lo_current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/time_view_current_date_marginStart"
        android:textSize="@dimen/time_view_text_size"
        android:textColor="@color/white"
        android:fontFamily="@font/custom_font"
        android:format12Hour="MM/dd"
        android:format24Hour="MM/dd"
        android:includeFontPadding="false"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"/>
<!--    android:layout_width="@dimen/time_view_current_week_layout_width"-->
    <TextClock
        android:id="@+id/lo_current_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/time_view_current_week_marginStart"
        android:textSize="@dimen/time_view_current_week_textSize"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:fontFamily="@font/custom_font"
        android:format12Hour="EEEE"
        android:format24Hour="EEEE"/>
    <TextClock
        android:id="@+id/lo_current_time"
        android:layout_width="@dimen/time_view_current_time_layout_width"
        android:layout_height="@dimen/time_view_current_time_layout_height"
        android:layout_marginTop="@dimen/time_view_current_time_layout_margin"
        android:layout_marginStart="@dimen/time_view_current_time_layout_margin"
        android:textSize="@dimen/time_view_current_time_textSize"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/custom_font"
        android:format12Hour="hh:mm"
        android:format24Hour="HH:mm"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="bottom|center_horizontal"
        android:clickable="false"
        android:includeFontPadding="false"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"/>
    <TextClock
        android:id="@+id/lo_current_ampm"
        android:layout_width="@dimen/time_view_current_ampm_layout_width"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/time_view_key_hint_current_ampm_textSize"
        android:textColor="@color/white"
        android:gravity="bottom|start"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:includeFontPadding="false"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:fontFamily="@font/custom_font"
        android:format12Hour="aa"
        android:format24Hour=""
        tools:ignore="HardcodedText" />
</LinearLayout>
