<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tbc_wallpaper">

    <SurfaceView    android:id="@+id/record_player"
        android:layout_width="349dp"
        android:layout_height="196dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/record_information"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/record_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/record_player"
        app:layout_constraintTop_toTopOf="@id/record_player" >

        <ProgressBar    android:id="@+id/hdd_space_progress"
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:focusable="false"
            android:progress="0"
            android:max="100"
            style="@style/Theme.Launcher.MiniEPG.Progress"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView   android:id="@+id/hdd_space_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text=""
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintTop_toTopOf="@id/hdd_space_progress"
            app:layout_constraintStart_toEndOf="@id/hdd_space_progress"
            app:layout_constraintBottom_toBottomOf="@id/hdd_space_progress"
            tools:ignore="HardcodedText" />

        <TextView   android:id="@+id/record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintStart_toStartOf="@id/hdd_space_progress"
            app:layout_constraintTop_toBottomOf="@id/hdd_space_progress"
            tools:ignore="HardcodedText" />

        <TextView   android:id="@+id/record_time_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintStart_toStartOf="@id/record_name"
            app:layout_constraintTop_toBottomOf="@id/record_name"
            tools:ignore="HardcodedText" />

        <TextView   android:id="@+id/record_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintStart_toStartOf="@id/record_time_length"
            app:layout_constraintTop_toBottomOf="@id/record_time_length"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.prime.launcher.PVR.Management.RecordListView android:id="@+id/record_program_list"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="@id/record_player"
        app:layout_constraintEnd_toEndOf="@id/record_information"
        app:layout_constraintTop_toBottomOf="@id/record_player"
        app:layout_constraintBottom_toTopOf="@id/record_program_list_hint_banner" />

    <com.prime.launcher.CustomView.HintBanner android:id="@+id/record_program_list_hint_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/progress_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mini_epg_root_height"
        android:background="@drawable/live_shadow"
        android:focusable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView   android:id="@+id/banner_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:text="00:00:00"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

        <ProgressBar android:id="@+id/banner_time_progress"
            android:layout_width="620dp"
            android:layout_height="8dp"
            android:focusable="false"
            android:progress="0"
            android:max="100"
            style="@style/Theme.Launcher.MiniEPG.Progress"
            app:layout_constraintStart_toEndOf="@id/banner_start_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/banner_end_time"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView   android:id="@+id/banner_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="90dp"
            android:text="00:00:00"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText" />

        <ImageView  android:id="@+id/banner_play_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_timeshift_play"
            app:layout_constraintTop_toBottomOf="@id/banner_time_progress"
            app:layout_constraintStart_toStartOf="@id/banner_time_progress"
            app:layout_constraintEnd_toEndOf="@id/banner_time_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView  android:id="@+id/banner_pause_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_timeshift_pause"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/banner_time_progress"
            app:layout_constraintStart_toStartOf="@id/banner_time_progress"
            app:layout_constraintEnd_toEndOf="@id/banner_time_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView  android:id="@+id/banner_forward_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_timeshift_forward"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/banner_time_progress"
            app:layout_constraintStart_toStartOf="@id/banner_time_progress"
            app:layout_constraintEnd_toEndOf="@id/banner_time_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView  android:id="@+id/banner_rewind_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_timeshift_backward"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/banner_time_progress"
            app:layout_constraintStart_toStartOf="@id/banner_time_progress"
            app:layout_constraintEnd_toEndOf="@id/banner_time_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription" />

        <TextView   android:id="@+id/banner_speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/banner_forward_icon"
            app:layout_constraintEnd_toStartOf="@id/banner_forward_icon"
            app:layout_constraintBottom_toBottomOf="@id/banner_forward_icon"
            tools:ignore="ContentDescription,HardcodedText" />

        <com.prime.launcher.CustomView.HintBanner android:id="@+id/hint_banner_of_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView  android:id="@+id/mute_of_record_program"
        android:layout_width="@dimen/home_live_tv_mute_fullscreen_width_height"
        android:layout_height="@dimen/home_live_tv_mute_fullscreen_width_height"
        android:layout_marginTop="@dimen/home_live_tv_mute_fullscreen_margin_y"
        android:src="@drawable/icon_mute"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>