<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:focusable="true"
    android:background="@drawable/mail_item_list_top_and_down_gold_line">

    <RadioButton
        android:id="@+id/CheckRadio"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_imitate_radio"
        android:focusable="false"
        android:clickable="false"
        android:buttonTint="@color/trans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/Title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="start|center_vertical"
        android:focusable="false"
        android:clickable="false"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/CheckRadio"/>

</androidx.constraintlayout.widget.ConstraintLayout>