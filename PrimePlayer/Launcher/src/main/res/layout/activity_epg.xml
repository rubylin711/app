<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tbc_wallpaper">

    <SurfaceView
        android:id="@+id/lo_epg_sfv_live_tv"
        android:layout_width="@dimen/lo_epg_sfv_live_tv_width"
        android:layout_height="@dimen/lo_epg_sfv_live_tv_height"
        android:layout_marginTop="@dimen/home_live_tv_margin_top"
        android:layout_marginStart="@dimen/home_live_tv_margin_left"
        android:focusable="false"
        android:background="@color/trans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <SurfaceView
        android:id="@+id/lo_epg_sfv_live_tv_2"
        android:layout_width="@dimen/lo_epg_sfv_live_tv_width"
        android:layout_height="@dimen/lo_epg_sfv_live_tv_height"
        android:layout_marginTop="@dimen/home_live_tv_margin_top"
        android:layout_marginStart="@dimen/home_live_tv_margin_left"
        android:focusable="false"
        android:background="@color/trans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <SurfaceView
        android:id="@+id/lo_epg_sfv_live_tv_3"
        android:layout_width="@dimen/lo_epg_sfv_live_tv_width"
        android:layout_height="@dimen/lo_epg_sfv_live_tv_height"
        android:layout_marginTop="@dimen/home_live_tv_margin_top"
        android:layout_marginStart="@dimen/home_live_tv_margin_left"
        android:focusable="false"
        android:background="@color/trans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/epg_music_channel_bg"
        android:layout_width="@dimen/lo_epg_sfv_live_tv_width"
        android:layout_height="@dimen/lo_epg_sfv_live_tv_height"
        android:layout_marginTop="@dimen/home_live_tv_margin_top"
        android:layout_marginStart="@dimen/home_live_tv_margin_left"
        android:background="@drawable/music_bg"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lo_epg_live_tv_message"
        android:layout_width="@dimen/lo_epg_sfv_live_tv_width"
        android:layout_height="@dimen/lo_epg_sfv_live_tv_height"
        android:layout_marginTop="@dimen/home_live_tv_margin_top"
        android:layout_marginStart="@dimen/home_live_tv_margin_left"
        android:padding="@dimen/lo_epg_live_tv_message_padding"
        android:textSize="@dimen/lo_epg_live_tv_message_text_size"
        android:focusable="false"
        android:gravity="center|start"
        android:background="@drawable/error_bg"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.prime.launcher.EPG.EpgView
        android:id="@+id/lo_epg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <ImageView
        android:id="@+id/lo_epg_tv_mute"
        android:layout_width="@dimen/home_live_tv_mute_epg_width_height"
        android:layout_height="@dimen/home_live_tv_mute_epg_width_height"
        android:layout_marginTop="40dp"
        android:layout_marginStart="190dp"
        android:src="@drawable/icon_mute"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>