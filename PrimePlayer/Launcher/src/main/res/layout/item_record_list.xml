<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/record_file_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zapping_channel_item_height"
    android:focusable="true"
    android:orientation="vertical"
    android:background="@drawable/list_item_zapping_bg_selector">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/quick_tune_channel_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/record_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_gravity="center_vertical"
        android:text="Record File Name"
        android:textSize="@dimen/zapping_channel_item_ch_num_text_size"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:focusable="false"
        android:gravity="start"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/record_series"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ui66_series_record"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/record_file_name"
        app:layout_constraintTop_toTopOf="@id/record_file_name"
        app:layout_constraintBottom_toBottomOf="@id/record_file_name"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/record_file_time_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/zapping_channel_item_ch_name_margin_x"
        android:layout_marginEnd="190dp"
        android:layout_gravity="center_vertical"
        android:text="@string/pvr_record_time"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:focusable="false"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/record_file_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        android:text="YYYY/MM/DD HH:MM:SS"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:focusable="false"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintStart_toEndOf="@id/record_file_time_prefix"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/quick_tune_channel_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>