<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lo_list_view_item_of_side_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/side_menu_app_list_item_margin_x"
    android:layout_marginTop="@dimen/side_menu_app_list_item_margin_y"
    android:layout_marginEnd="@dimen/side_menu_app_list_item_margin_x"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/lo_rcv_item_thumbnail"
        android:layout_width="@dimen/side_menu_app_list_item_width"
        android:layout_height="@dimen/side_menu_app_list_item_height"
        android:background="@color/white"
        android:focusable="false"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/lo_rcv_item_label"
        android:layout_width="@dimen/side_menu_app_list_item_width"
        android:layout_height="@dimen/side_menu_app_list_item_text_height"
        android:textSize="@dimen/side_menu_app_list_item_text_size"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="invisible"
        android:singleLine="true"
        android:focusable="false"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"/>
</LinearLayout>
