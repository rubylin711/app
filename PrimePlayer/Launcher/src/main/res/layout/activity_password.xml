<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/block1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/lo_password_left_frame"
        android:layout_width="@dimen/lo_channel_pre_scanning_left_frame_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/lo_password_title"
            android:textSize="@dimen/lo_channel_pre_scanning_title_textsize"
            android:textColor="@android:color/white"
            android:text="@string/dmg_settings_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lo_channel_pre_scanning_title_marginstart"/>
        <TextView
            android:id="@+id/lo_password_subtitle"
            android:textSize="@dimen/lo_channel_pre_scanning_subtitle_textsize"
            android:textColor="@android:color/white"
            android:text="@string/dmg_settings_password_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lo_channel_pre_scanning_subtitle_margintop"
            android:layout_below="@id/lo_password_title"
            android:layout_alignLeft="@id/lo_password_title"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lo_password_content"
        android:gravity="center"
        android:layout_width="@dimen/lo_channel_pre_scanning_content_width"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/lo_password_left_frame">

        <LinearLayout
            android:id="@+id/lo_password_set_frame"
            android:orientation="vertical"
            android:layout_width="@dimen/lo_channel_pre_scanning_scanframe_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lo_channel_pre_scanning_scanframe_marginstart"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/lo_channel_pre_scanning_scanframe_title_textsize"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dmg_settings_password_old_hint"/>
            <TextView
                android:id="@+id/lo_password_old"
                android:textSize="@dimen/lo_channel_pre_scanning_frequency_textsize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_frequency_margintop"/>
            <View
                android:id="@+id/lo_password_old_line"
                android:background="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lo_channel_pre_scanning_frequency_line_height"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_frequency_line_margintop"/>
            <TextView
                android:textSize="@dimen/lo_channel_pre_scanning_scanframe_title_textsize"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_scanframe_title_margintop"
                android:text="@string/dmg_settings_password_new_hint"/>
            <TextView
                android:id="@+id/lo_password_new"
                android:textSize="@dimen/lo_channel_pre_scanning_frequency_textsize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_frequency_margintop"/>
            <View
                android:id="@+id/lo_password_new_line"
                android:background="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lo_channel_pre_scanning_frequency_line_height"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_frequency_line_margintop"/>
            <TextView
                android:textSize="@dimen/lo_channel_pre_scanning_scanframe_title_textsize"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_scanframe_title_margintop"
                android:text="@string/dmg_settings_password_new_hint_again"/>
            <TextView
                android:id="@+id/lo_password_new_again"
                android:textSize="@dimen/lo_channel_pre_scanning_frequency_textsize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_frequency_margintop"/>
            <View
                android:id="@+id/lo_password_new_again_line"
                android:background="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lo_channel_pre_scanning_frequency_line_height"
                android:layout_marginTop="@dimen/lo_channel_pre_scanning_frequency_line_margintop"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/lo_password_delete_frame1"
            android:layout_width="@dimen/lo_channel_pre_scanning_delete_frame_width"
            android:layout_height="@dimen/lo_channel_pre_scanning_delete_frame_height"
            android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_frame_marginstart"
            android:layout_marginTop="@dimen/lo_channel_pre_scanning_delete_frame_margintop"
            android:layout_toRightOf="@id/lo_password_set_frame"
            android:layout_alignTop="@id/lo_password_set_frame">
            <ImageView
                android:id="@+id/lo_password_delete_hint_icon"
                android:layout_width="@dimen/lo_channel_pre_scanning_delete_hint_icon_width"
                android:layout_height="@dimen/lo_channel_pre_scanning_delete_hint_icon_height"
                android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_hint_icon_marginstart"
                android:src="@drawable/hint_blue"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/lo_channel_pre_scanning_scanframe_title_textsize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_hint_icon_marginstart"
                android:text="@string/channel_scan_clear"
                android:layout_toRightOf="@id/lo_password_delete_hint_icon"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo_password_delete_frame2"
            android:layout_width="@dimen/lo_channel_pre_scanning_delete_frame_width"
            android:layout_height="@dimen/lo_channel_pre_scanning_delete_frame_height"
            android:visibility="gone"
            android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_frame_marginstart"
            android:layout_marginTop="@dimen/lo_channel_pre_scanning_delete_frame2_margintop"
            android:layout_toRightOf="@id/lo_password_set_frame"
            android:layout_alignTop="@id/lo_password_set_frame">
            <ImageView
                android:id="@+id/lo_password_delete_hint_icon2"
                android:layout_width="@dimen/lo_channel_pre_scanning_delete_hint_icon_width"
                android:layout_height="@dimen/lo_channel_pre_scanning_delete_hint_icon_height"
                android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_hint_icon_marginstart"
                android:src="@drawable/hint_blue"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/lo_channel_pre_scanning_scanframe_title_textsize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_hint_icon_marginstart"
                android:text="@string/channel_scan_clear"
                android:layout_toRightOf="@id/lo_password_delete_hint_icon2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo_password_delete_frame3"
            android:layout_width="@dimen/lo_channel_pre_scanning_delete_frame_width"
            android:layout_height="@dimen/lo_channel_pre_scanning_delete_frame_height"
            android:visibility="gone"
            android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_frame_marginstart"
            android:layout_toRightOf="@id/lo_password_set_frame"
            android:layout_alignBottom="@id/lo_password_set_frame">
            <ImageView
                android:id="@+id/lo_password_delete_hint_icon3"
                android:layout_width="@dimen/lo_channel_pre_scanning_delete_hint_icon_width"
                android:layout_height="@dimen/lo_channel_pre_scanning_delete_hint_icon_height"
                android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_hint_icon_marginstart"
                android:src="@drawable/hint_blue"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/lo_channel_pre_scanning_scanframe_title_textsize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lo_channel_pre_scanning_delete_hint_icon_marginstart"
                android:text="@string/channel_scan_clear"
                android:layout_toRightOf="@id/lo_password_delete_hint_icon3"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lo_password_right_frame"
        android:background="@android:color/black"
        android:layout_width="@dimen/lo_channel_pre_scanning_right_frame_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/lo_password_lock_done"
                android:textSize="@dimen/lo_channel_pre_scanning_scanframe_title_textsize"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@drawable/mail_item_bg_focus"
                android:padding="@dimen/lo_channel_pre_scanning_channel_signal_scan_padding"
                android:focusable="true"
                android:clickable="true"
                android:text="@string/dmg_settings_lock_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/lo_channel_pre_scanning_channel_signal_scan_marginend"
                android:layout_marginStart="@dimen/lo_channel_pre_scanning_channel_signal_scan_marginstart"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>