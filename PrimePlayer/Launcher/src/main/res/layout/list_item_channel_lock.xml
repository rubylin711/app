<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/lo_item_channel_lock_layer"
    android:background="@drawable/mail_item_bg_focus"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lo_item_channel_lock_layer_height">
    <RelativeLayout
        android:background="@color/block1"
        android:layout_width="25dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/lo_item_channel_lock_channel_status"
        android:layout_width="@dimen/lo_item_channel_lock_channel_status_width"
        android:layout_height="@dimen/lo_item_channel_lock_channel_status_height"
        android:layout_marginEnd="@dimen/lo_item_channel_lock_channel_status_marginend"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/lo_item_channel_lock_channel_num_text"
        android:layout_width="@dimen/lo_item_channel_lock_channel_num_text_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lo_item_channel_lock_channel_num_text_textsize"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_toEndOf="@id/lo_item_channel_lock_channel_status"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/lo_item_channel_lock_channel_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/lo_item_channel_lock_channel_num_text_textsize"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/lo_item_channel_lock_channel_status_marginend"
        android:layout_marginRight="@dimen/lo_item_channel_lock_channel_status_marginend"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_toEndOf="@id/lo_item_channel_lock_channel_num_text"
        android:layout_centerVertical="true"/>
</RelativeLayout>