<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tbc_wallpaper">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_half_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memory_device_usb_information"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@id/guideline_half_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/memory_device_hdd_space_progress"
            style="@style/Theme.Launcher.MiniEPG.Progress"
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:focusable="false"
            android:max="100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/memory_device_hdd_space_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text=""
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/memory_device_hdd_space_progress"
            app:layout_constraintStart_toEndOf="@id/memory_device_hdd_space_progress"
            app:layout_constraintTop_toTopOf="@id/memory_device_hdd_space_progress"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memory_device_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hottest_app_item_rect_30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memory_device_usb_information">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/quick_tune_channel_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dvr_mgr_limit"/>

        <TextView
            android:id="@+id/dvr_mgr_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/dvr_mgr_limit"
            android:textSize="@dimen/lo_memory_device_menu_textsize"
            android:background="@drawable/list_item_zapping_bg_selector"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/dvr_mgr_limit_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/dvr_mgr_manual_clear"
            android:textSize="@dimen/lo_memory_device_menu_textsize"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="@id/dvr_mgr_limit"
            app:layout_constraintTop_toTopOf="parent"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/quick_tune_channel_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dvr_mgr_hdd_remove"/>

        <TextView
            android:id="@+id/dvr_mgr_hdd_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="@string/dvr_mgr_hdd_remove"
            android:textSize="@dimen/lo_memory_device_menu_textsize"
            android:background="@drawable/list_item_zapping_bg_selector"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/dvr_mgr_limit"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/quick_tune_channel_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dvr_mgr_hdd_formatting"/>

        <TextView
            android:id="@+id/dvr_mgr_hdd_formatting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="@string/dvr_mgr_hdd_formatting"
            android:textSize="@dimen/lo_memory_device_menu_textsize"
            android:background="@drawable/list_item_zapping_bg_selector"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/dvr_mgr_hdd_remove"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/quick_tune_channel_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/dvr_mgr_hdd_management"/>

        <TextView
            android:id="@+id/dvr_mgr_hdd_management"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="@string/dvr_mgr_hdd_management"
            android:textSize="@dimen/lo_memory_device_menu_textsize"
            android:background="@drawable/list_item_zapping_bg_selector"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/dvr_mgr_hdd_formatting"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/quick_tune_channel_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dvr_mgr_hdd_management"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memory_device_hdd_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memory_device_usb_information">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_memory_device_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="@id/memory_device_hdd_management"
            app:layout_constraintStart_toStartOf="@id/memory_device_hdd_management"
            app:layout_constraintTop_toTopOf="@id/memory_device_hdd_management">

            <TextView
                android:id="@+id/lo_memory_device_settings_usb_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usb_devices"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:layout_marginStart="@dimen/lo_memory_device_usb_device_marginstart"
                android:textColor="@color/white"
                android:focusable="false"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"
                app:layout_constraintTop_toTopOf="@id/lo_memory_device_settings_title"
                app:layout_constraintStart_toStartOf="@id/lo_memory_device_settings_title" />

            <TextView
                android:id="@+id/lo_memory_device_settings_total_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_space"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:layout_marginStart="@dimen/lo_memory_device_total_space_marginstart"
                android:textColor="@color/white"
                android:focusable="false"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"
                app:layout_constraintTop_toTopOf="@id/lo_memory_device_settings_title"
                app:layout_constraintStart_toStartOf="@id/lo_memory_device_settings_title" />

            <TextView
                android:id="@+id/lo_memory_device_settings_free_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_space"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:layout_marginStart="@dimen/lo_memory_device_free_space_marginstart"
                android:textColor="@color/white"
                android:focusable="false"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"
                app:layout_constraintTop_toTopOf="@id/lo_memory_device_settings_title"
                app:layout_constraintStart_toStartOf="@id/lo_memory_device_settings_title" />

            <TextView
                android:id="@+id/lo_memory_device_settings_used_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/used_space"
                android:textSize="@dimen/lo_new_timer_dialog_text_size"
                android:layout_marginStart="@dimen/lo_memory_device_used_space_marginstart"
                android:textColor="@color/white"
                android:focusable="false"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="2"
                app:layout_constraintTop_toTopOf="@id/lo_memory_device_settings_title"
                app:layout_constraintStart_toStartOf="@id/lo_memory_device_settings_title" />

            <!--        <TextView-->
            <!--            android:id="@+id/lo_memory_device_settings_type"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="@string/type"-->
            <!--            android:textSize="@dimen/lo_new_timer_dialog_text_size"-->
            <!--            android:layout_marginEnd="70dp"-->
            <!--            android:textColor="@color/white"-->
            <!--            android:focusable="false"-->
            <!--            android:gravity="center"-->
            <!--            android:shadowColor="@color/black"-->
            <!--            android:shadowDx="1"-->
            <!--            android:shadowDy="2"-->
            <!--            android:shadowRadius="2"-->
            <!--            app:layout_constraintTop_toTopOf="@id/lo_memory_device_settings_title"-->
            <!--            app:layout_constraintEnd_toEndOf="@id/lo_memory_device_settings_title"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.prime.launcher.EPG.MiddleFocusRecyclerView
            android:id="@+id/lo_memory_device_settings_usb_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:scrollbars="vertical"
            android:background="@drawable/list_item_zapping_bg_selector"
            app:layout_constraintStart_toStartOf="@id/lo_memory_device_settings_title"
            app:layout_constraintTop_toBottomOf="@id/lo_memory_device_settings_title"
            app:layout_constraintEnd_toEndOf="@id/lo_memory_device_settings_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_memory_device_settings_hint_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:descendantFocusability="blocksDescendants">

        <com.prime.launcher.CustomView.TimeViewKeyHint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/lo_memory_device_settings_hint_container"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/lo_memory_device_settings_hint_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hint_ok"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:text="@string/hint_rcu_ok_confirm"
                    android:textSize="@dimen/lo_new_timer_dialog_text_size"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lo_memory_device_settings_hint_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hint_yellow"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:text="@string/hint_rcu_hdd_modify"
                    android:textSize="@dimen/lo_new_timer_dialog_text_size"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lo_memory_device_settings_hint_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/hint_red"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:text="@string/remove_usb"
                    android:textSize="@dimen/lo_new_timer_dialog_text_size"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>