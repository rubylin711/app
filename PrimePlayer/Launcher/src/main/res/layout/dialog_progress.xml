<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="960dp"
    android:layout_height="540dp"
    android:background="@color/gray_2">

    <TextView android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ejecting_dialog_title_margin_start"
        android:layout_marginTop="@dimen/ejecting_dialog_title_margin_top"
        android:text="@string/pvr_ejecting_usb_device"
        android:textSize="33.5sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginStart="@dimen/ejecting_dialog_title_margin_start"
        android:layout_marginTop="@dimen/ejecting_dialog_title_margin_top"
        android:layout_marginBottom="@dimen/ejecting_dialog_title_margin_top"
        android:layout_marginEnd="@dimen/ejecting_dialog_title_margin_start"
        android:visibility="visible"
        android:progress="50"
        android:indeterminate="true"
        android:indeterminateTint="@color/pvr_red_color"
        android:indeterminateTintMode="src_in"
        style="@style/Theme.Launcher.MiniEPG.Progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ejecting_dialog_msg_margin_top"
        android:layout_marginStart="@dimen/ejecting_dialog_title_margin_start"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>