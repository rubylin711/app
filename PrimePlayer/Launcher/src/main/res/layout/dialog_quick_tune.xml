<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lo_quick_tune_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="@dimen/quick_tune_root_width"
        android:layout_height="@dimen/quick_tune_root_height"
        android:layout_marginEnd="@dimen/quick_tune_root_margin_end"
        android:layout_marginBottom="@dimen/quick_tune_root_margin_bottom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:focusable="false"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:id="@+id/lo_quick_tune_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/quick_tune_root_margin_start_end"
            android:layout_marginRight="@dimen/quick_tune_root_margin_start_end"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:focusable="false"
            android:background="@drawable/gradient_panel">
            <TextView
                android:id="@+id/lo_quick_tune_title_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/quick_tune_title_text_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/title_quick_tune"
                android:textSize="@dimen/quick_tune_title_text_size"
                android:textColor="@color/white"
                android:focusable="false"
                android:gravity="center"/>
            <FrameLayout
                android:id="@+id/lo_quick_tune_line"
                android:background="@color/quick_tune_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/quick_tune_line_margin"
                android:layout_marginRight="@dimen/quick_tune_line_margin"
                android:layout_below="@+id/lo_quick_tune_title_text"
                android:focusable="false"/>
            <RelativeLayout
                android:id="@+id/lo_quick_tune_quick_channels"
                android:padding="@dimen/quick_tune_quick_channels_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lo_quick_tune_line"
                android:focusable="false"/>
            <com.prime.launcher.Home.LiveTV.QuickTune.FavListView
                android:id="@+id/lo_quick_tune_favorite_channels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lo_quick_tune_line"/>
            <TextView
                android:id="@+id/lo_quick_tune_empty_favorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lo_quick_tune_line"
                android:text="@string/dvr_no_data"
                android:textSize="@dimen/quick_tune_empty_favorite_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:focusable="true"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/lo_quick_tune_add_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/quick_tune_add_layer_margin_top"
                android:layout_below="@+id/lo_quick_tune_line"
                android:focusable="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/lo_quick_tune_add_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/quick_tune_add_text_height"
                    android:textSize="@dimen/quick_tune_add_text_size"
                    android:textColor="@color/white"
                    android:focusable="false"
                    android:gravity="center"
                    android:background="@color/quick_tune_add_text"/>
                <com.prime.launcher.Home.LiveTV.QuickTune.AddListView
                    android:id="@+id/lo_quick_tune_add_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/lo_quick_tune_left_arrow"
            android:layout_width="@dimen/quick_tune_arrow_size_left"
            android:layout_height="@dimen/quick_tune_arrow_size_left"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:src="@drawable/icon_miniepg_prev"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/lo_quick_tune_right_arrow"
            android:layout_width="@dimen/quick_tune_arrow_size_right"
            android:layout_height="@dimen/quick_tune_arrow_size_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:src="@drawable/icon_miniepg_next"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</RelativeLayout>