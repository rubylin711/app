<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/lo_weather_viewpager"
        android:paddingLeft="@dimen/lo_weather_viewpager_paddingleft"
        android:paddingRight="@dimen/lo_weather_viewpager_paddinright"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lo_weather_viewpager_height"
        android:layout_marginTop="@dimen/lo_weather_viewpager_margintop"/>

    <com.rd.PageIndicatorView
        android:id="@+id/lo_weather_indicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/lo_weather_indicator_height"
        android:layout_marginLeft="@dimen/lo_weather_indicator_marginleft"
        android:layout_marginBottom="@dimen/lo_weather_indicator_marginbottom"
        android:layout_alignParentBottom="true"
        app:piv_animationType="scale"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_radius="@dimen/lo_weather_indicator_radius"
        app:piv_selectedColor="@color/pvr_red_color"
        app:piv_unselectedColor="@android:color/darker_gray"
        app:piv_viewPager="@+id/ViewPager"/>
</RelativeLayout>