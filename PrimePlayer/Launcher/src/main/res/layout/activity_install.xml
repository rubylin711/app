<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tbc_wallpaper"
    tools:context=".Home.Recommend.Installer.InstallerActivity">

    <TextView
        android:id="@+id/lo_no_screens_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_centerInParent="true"/>
    <com.prime.launcher.Home.Recommend.Installer.PageListView
        android:id="@+id/lo_page_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
