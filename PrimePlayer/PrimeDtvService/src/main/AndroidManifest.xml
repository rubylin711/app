<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.prime.dtvservice"
    android:sharedUserId="android.uid.system">
    <permission
        android:name="com.prime.permission.TICKER"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.android.providers.tv.permission.READ_TV_LISTINGS" />
    <uses-permission android:name="com.android.providers.tv.permission.WRITE_TV_LISTINGS" />
    <uses-permission android:name="com.android.providers.tv.permission.WRITE_EPG_DATA" />
    <uses-permission android:name="com.android.providers.tv.permission.READ_EPG_DATA" />
    <uses-permission android:name="android.permission.ACCESS_TV_TUNER" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.Manifest.permission.MODIFY_PARENTAL_CONTROLS" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="com.prime.permission.TICKER" />

    <application
        android:name="com.prime.dtvservice.PrimeDtvServiceApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrimePlayer" >
    <service android:name="com.prime.dtvservice.PrimeDtvService"
        android:enabled="true"
        android:foregroundServiceType="mediaPlayback" 
        android:exported="true">
        <intent-filter>
            <action android:name="com.prime.dtvservice.PrimeDtvService.action" />
        </intent-filter>
    </service>
    <service android:name="com.prime.dtv.service.dsmcc.DsmccService"
        android:exported="true">
        <intent-filter>
            <action android:name="com.prime.dtv.service.dsmcc.DsmccService.action" />
        </intent-filter>
    </service>
    <receiver android:name="com.prime.dtvservice.BootReceiver"
        android:enabled="true"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
            <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
        </intent-filter>
    </receiver>
    <provider
        android:name="com.prime.dtv.database.DTVContentProvider"
        android:authorities="com.prime.dtv.database.DTVContentProvider"
        android:exported="true" />
    <provider
        android:name="com.prime.dtv.service.database.DVBContentProvider"
        android:authorities="com.prime.dtv.service.database.DVBContentProvider"
        android:exported="true" />
    <provider
        android:name="com.prime.dtv.service.database.PvrContentProvider"
        android:authorities="com.prime.dtv.service.database.PvrContentProvider"
        android:exported="true" />
</application>
</manifest>
