<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_focused="false">
        <shape>
            <gradient android:angle="90" android:endColor="#00000000" android:startColor="#00000000" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/colorTabSelect" android:startColor="@color/colorTabSelect" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/colorTabSelect" android:startColor="@color/colorTabSelect" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="90" android:endColor="@color/colorTabSelect" android:startColor="@color/colorTabSelect" />
        </shape>
    </item>
    <item >
        <shape>
            <gradient android:angle="90" android:endColor="#00000000" android:startColor="#00000000" />
        </shape>
    </item>

</selector>
