<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#80000000"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tvNumberKeyChannelNumberTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginRight="47dp"
        android:text="023"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:visibility="visible">
    </TextView>

    <RelativeLayout
        android:layout_width="200.5dp"
        android:layout_height="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginRight="47dp"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNumberKeyChannelList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DB171719"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarSize="2dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@color/colorScrollBarGray"
            android:scrollbarTrackVertical="@color/colorWhiteOpacity15"
            android:visibility="visible" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>