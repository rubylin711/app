<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llEpgProgramList"
    android:layout_width="510dp"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvEpgProgramListStartTime"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:text="00:00"
        android:textColor="@color/colorWhiteOpacity40"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvEpgProgramListName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:gravity="center|left"
        android:paddingLeft="6dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:text="沒有節目資訊"
        android:textColor="@color/colorWhiteOpacity70"
        android:layout_weight="1"
        android:textSize="16dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0" />

    <ImageView
        android:id="@+id/ivEpgProgramListReminder"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/icon_miniguide_resv_watch_d"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ivEpgProgramListRecordSeries"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/icon_miniguide_rec_resv_sereis"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ivEpgProgramListRecord"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/icon_miniguide_rec_resv"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ivEpgProgramListRecording"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/icon_miniguide_rec"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:visibility="visible"/>

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp" />
</LinearLayout>