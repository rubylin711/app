<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llEpgChannelList"
    android:layout_width="220dp"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <!-- Only one status icon is shown before the channel number at any given time. Display order of priority: Lock > Music > Favorite -->
    <ImageView
        android:id="@+id/ivEpgChannelListIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/icon_ch_lock_d"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvEpgChannelListNumber"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ellipsize="end"
        android:gravity="center|right"
        android:layout_marginStart="3dp"
        android:minWidth="26dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="002"
        android:textColor="@color/colorGoldOpacity70"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvEpgChannelListName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="15dp"
        android:singleLine="true"
        android:text="bb快報"
        android:textColor="@color/colorWhiteOpacity70"
        android:layout_weight="1"
        android:textSize="16dp" />
</LinearLayout>