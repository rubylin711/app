<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/black"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tvMiniEpgChannelNumberTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginRight="47dp"
        android:text="023"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:visibility="visible">

    </TextView>

    <RelativeLayout
        android:id="@+id/rlMiniEpg"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 背景 半透明 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/gradient_black"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#E0000000"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- mini epg 左邊區塊 -->
        <LinearLayout
            android:id="@+id/llChannelTitle"
            android:layout_width="145dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">

            <!-- 左鍵：頻道列表：區塊 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <!-- 左鍵：頻道列表：圖示 -->
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/arrow_miniguide_l" />

                <!-- 左鍵：頻道列表：文字 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/miniepg_channel_list"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="16dp" />
            </LinearLayout>

            <!-- 頻道資訊：區塊 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <!-- 頻道資訊：頻道號 -->
                <TextView
                    android:id="@+id/tvMiniEpgChannelNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:text="024"
                    android:textColor="@color/colorGold"
                    android:textSize="36dp" />

                <!-- 頻道資訊：頻道鎖定 | 頻道畫面 mini EPG 左邊 頻道名右側 -->
                <ImageView
                    android:id="@+id/ivMiniEpgLock"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_ch_lock"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivMiniEpgMusic"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_ch_music"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivMiniEpgStar"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_ch_favorite"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMiniEpgChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="GooGle I|O 2014- Casting to the future"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMiniEpgQuality"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:visibility="gone"
                    android:src="@drawable/icon_miniguide_hd" />

                <ImageView
                    android:id="@+id/ivMiniEpgDolby"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:src="@drawable/icon_miniguide_dolby" />
            </LinearLayout>

            <!-- 現在時間：區塊 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <!-- 現在時間：圖示 -->
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:alpha="0.7"
                    android:src="@drawable/icon_miniguide_resv" />

                <!-- 現在時間：文字 -->
                <TextView
                    android:id="@+id/tvMiniEpgDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="10.27(二)14:42"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- mini epg 中央區塊 -->
        <RelativeLayout
            android:id="@+id/rlMiniEpgInfo"
            android:layout_width="525dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/llChannelTitle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMiniEpgNowProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="75dp"
                android:ellipsize="marquee"
                android:gravity="center|left"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="26dp" />

            <!-- 親子鎖資訊 -->
            <LinearLayout
                android:id="@+id/llMiniEpgNowProgramParentalControlLock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/rating_lock_info_hint"
                    android:textColor="@color/colorBlueSubtitle"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/rating_lock_info_ok"
                    android:textColor="@color/colorBlueSubtitle"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/rating_lock_info_path"
                    android:textColor="@color/colorB2b2b2Opacity70"
                    android:textSize="14dp" />
            </LinearLayout>

            <!-- 時間鎖資訊 -->
            <LinearLayout
                android:id="@+id/llMiniEpgNowProgramWorkHourLock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/worktime_lock_info_hint"
                    android:textColor="@color/colorAfc8deOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/worktime_lock_info_ok"
                    android:textColor="@color/colorAfc8deOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/worktime_lock_info_path"
                    android:textColor="@color/colorB2b2b2Opacity70"
                    android:textSize="14dp" />
            </LinearLayout>

            <!-- 頻道鎖資訊 -->
            <LinearLayout
                android:id="@+id/llMiniEpgNowProgramChannelLock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/channel_lock_info_hint"
                    android:textColor="@color/colorAfc8deOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/channel_lock_info_ok"
                    android:textColor="@color/colorAfc8deOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/channel_lock_info_path"
                    android:textColor="@color/colorB2b2b2Opacity70"
                    android:textSize="14dp" />
            </LinearLayout>

            <!-- 成人頻道鎖資訊 -->
            <LinearLayout
                android:id="@+id/llMiniEpgNowProgramAdultChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/adult_lock_info_hint"
                    android:textColor="@color/colorAfc8deOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="@string/adult_lock_info_ok"
                    android:textColor="@color/colorAfc8deOpacity80"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMiniEpgNowMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="123dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:singleLine="true"
                    android:text="@string/music_introduction"
                    android:textColor="#ccafc8de"
                    android:textSize="16dp" />
            </LinearLayout>

            <!-- 目前播放節目資訊 -->
            <LinearLayout
                android:id="@+id/llMiniEpgNowProgramMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="110dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/llMiniEpgNowProgram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <!-- 目前播放節目 開始時間 -->
                    <TextView
                        android:id="@+id/tvMiniEpgNowProgramTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/no_program_info"
                        android:textColor="#ff8da4b9"
                        android:textSize="13dp" />

                    <!-- 目前播放節目 內容分級圖示 -->
                    <ImageView
                        android:id="@+id/ivMiniEpgNowRating"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/rating_0"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvMiniEpgBilingual"
                        android:layout_width="28dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/stroke_white"
                        android:gravity="center"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:text="雙語"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tvMiniEpgSubtitle"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/stroke_white"
                        android:gravity="center"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:text="@string/subtitle"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="11dp" />

                    <ImageView
                        android:id="@+id/ivMiniEpgNowRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_miniguide_rec"
                        android:visibility="visible" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pbMiniEpgProgram"
                    style="@style/progress_channel"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/corporateColor"
                    android:progressBackgroundTint="@color/progress_gary"/>

                <LinearLayout
                    android:id="@+id/llMiniEpgNextProgram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivMiniEpgNext"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:singleLine="true"
                        android:src="@drawable/icon_next" />

                    <TextView
                        android:id="@+id/tvMiniEpgNextProgram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:singleLine="true"
                        android:text="@string/no_program_info"
                        android:textColor="@color/colorWhiteOpacity70"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/ivMiniEpgNextReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:adjustViewBounds="true"
                        android:singleLine="true"
                        android:src="@drawable/icon_miniguide_resv_watch_d"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivMiniEpgNextRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:adjustViewBounds="true"
                        android:singleLine="true"
                        android:src="@drawable/icon_miniguide_rec_resv" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <!-- 下方遙控器彩色按鍵說明區塊 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <!-- 加入 gravity center vertical -->
            <!-- change from right to end -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMiniEpgRedKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:drawableStart="@drawable/shape_round_10_red_ea4e4f"
                    android:drawablePadding="6dp"
                    android:visibility="gone"
                    android:text="@string/caption_startrecording"
                    android:textColor="#818181"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/llMiniEpgGreenKey"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_round_10_green_40b571" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/bilingual_switch"
                        android:textColor="#818181"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvMiniEpgBilingualNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="@string/text_Chinese"
                        android:textColor="#a27421"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMiniEpgYellowKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:drawableStart="@drawable/shape_round_10_yellow_e8d04c"
                    android:drawablePadding="6dp"
                    android:text="@string/add_favourite"
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/llMiniEpgBlueKey"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_round_10_blue_3fa7fe" />

                    <!-- XXX -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="雙語字幕"
                        android:textColor="#818181"
                        android:textSize="12sp" />

                    <!-- XXX -->
                    <TextView
                        android:id="@+id/tvMiniEpgSubtitleNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="中文"
                        android:textColor="#a27421"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_14_gray_81"
                        android:gravity="center"
                        android:text="@string/caption_ok_en"
                        android:textColor="#909090"
                        android:textSize="7sp"
                        android:textStyle="bold" />

                    <!-- XXX -->
                    <TextView
                        android:id="@+id/tvMiniEpgOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="節目介紹"
                        android:textColor="#818181"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="45dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="3dp"
                android:text="@string/miniepg_channel_search"
                android:textColor="@color/colorWhiteOpacity50"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/arrow_miniguide_top" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMiniEpgAd"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="75dp"
            android:layout_marginRight="45dp"
            android:src="@drawable/homeplus" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>