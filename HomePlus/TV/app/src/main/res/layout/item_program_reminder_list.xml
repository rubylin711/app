<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llProgramReminderList"
    android:layout_width="778dp"
    android:layout_height="35dp"
    android:gravity="center|left"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvProgramReminderListChannelNumber"
        android:layout_width="26.5dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="000"
        android:textColor="@color/colorGoldOpacity70"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvProgramReminderListChannelName"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:layout_marginLeft="6dp"
        android:ellipsize="end"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="ch_name"
        android:textColor="@color/colorWhiteOpacity70"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/ivProgramReminderListPadlock"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/ok"
        android:src="@drawable/icon_ch_lock_d"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProgramReminderListProgramName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="pg_name"
            android:textColor="@color/colorWhiteOpacity70"
            android:textSize="15dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivProgramReminderListProgramRating"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvProgramReminderListProgramDate"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="23.05.07"
        android:textColor="@color/colorWhiteOpacity70"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvProgramReminderListProgramStartEndTime"
        android:layout_width="107dp"
        android:layout_height="35dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="05:00 - 06:00"
        android:textColor="@color/colorWhiteOpacity70"
        android:textSize="15dp" />

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent">
    </View>
</LinearLayout>