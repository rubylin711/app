<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF000000"
    tools:context=".ui.activity.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="584dp"
        android:layout_height="258dp"
        android:background="@drawable/shape_r_corner_3_gray_37"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/delete"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="66dp"
            android:background="#4C4C4C"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 訊息內容 -->
        <TextView
            android:id="@+id/tvProgramDeleteMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="94dp"
            android:text="@string/reminder_delete_msg"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="128dp"
            android:background="#444444"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="18dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvProgramDeleteChannelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGoldOpacity70"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProgramDeleteChannelName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvProgramDeleteProgramName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvProgramDeleteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/date_duration_divider"
                android:textColor="#565656"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProgramDeleteSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnProgramDelete"
            android:layout_width="125dp"
            android:layout_height="36dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/state_pvr_dialog_button"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnProgramDeleteAll" />

        <Button
            android:id="@+id/btnProgramDeleteAll"
            android:layout_width="125dp"
            android:layout_height="36dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/state_pvr_dialog_button"
            android:text="@string/delete_all"
            android:textAllCaps="false"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/btnProgramDelete"
            app:layout_constraintRight_toLeftOf="@id/btnReminderCancelDelete" />

        <Button
            android:id="@+id/btnReminderCancelDelete"
            android:layout_width="125dp"
            android:layout_height="36dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/state_pvr_dialog_button"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@id/btnProgramDeleteAll"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>