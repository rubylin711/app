<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="800dp"
        android:layout_height="430dp"
        android:background="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSignalInfoLeft"
            android:layout_width="500dp"
            android:layout_height="430dp"
            android:background="#34363c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/clSignalInfoRight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="訊號檢測"
                android:textColor="#ffffff"
                android:textSize="23dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Top Line -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="35dp"
                android:background="@color/colorWhiteOpacity10"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="75dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="top|right"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="頻道"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="頻率(KHz)"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="符碼率(KS/s)"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="變調模式(QAM)"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="訊號BER"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="訊號SNR"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="訊號強度"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="機上盒序列號"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="智慧卡序號"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="STB IP"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="SI訊息"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text="其他訊息"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/colorWhiteOpacity50"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSignalInfoCh"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalFreq"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalInfoSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalQAM"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalInfoBer"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pbSNR"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="2dp" />

                        <TextView
                            android:id="@+id/tvSignalInfoSnr"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:textColor="#ff8da4b9"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pbStrength"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="2dp" />

                        <TextView
                            android:id="@+id/tvSignalInfoStrength"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:textColor="#ff8da4b9"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSignalStbSn"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalInfoCardSn"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalStbIp"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalInfoSiInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="center"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSignalInfoStreamInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        android:gravity="left"
                        android:textColor="@color/colorWhiteOpacity80"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="385dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnSignalInfoClose"
                    android:layout_width="125dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_item2"
                    android:checked="true"
                    android:drawablePadding="20dp"
                    android:paddingLeft="0dp"
                    android:text="關閉"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSignalInfoRight"
            android:layout_width="300dp"
            android:layout_height="430dp"
            android:background="#34363c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/clSignalInfoLeft"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivSignalInfoQRCode"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btnSignalInfoReport"
                    android:layout_width="125dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/button_item2"
                    android:checked="true"
                    android:drawablePadding="20dp"
                    android:text="回報AERM/VBM"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>