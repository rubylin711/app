<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="452dp"
    android:layout_height="318.5dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:background="#34363c">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPreferredSetting"
        android:layout_width="452dp"
        android:layout_height="318.5dp"
        android:layout_centerInParent="true"
        android:background="#34363c"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/setting"
                android:textColor="#ffffff"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preferred_setting_msg"
                android:textColor="#ff8da4b9"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="11.5dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorWhiteOpacity10"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/llPreferredSettingFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center|right"
                android:orientation="vertical">

                <!-- 1 begin -->
                <LinearLayout
                    android:id="@+id/llPreferredSettingAudioLang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="top|right"
                    android:orientation="horizontal">

                    <!-- 1-1 begin -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:maxWidth="87dp"
                            android:text="@string/preferred_setting_audio_lang"
                            android:textColor="@color/colorWhiteOpacity50"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <!-- 1-1 end -->

                    <!-- 1-2 begin -->
                    <LinearLayout
                        android:layout_width="283dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="top|right"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="283dp"
                            android:layout_height="36dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/btnPreferredSettingAudioLang"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_item2"
                                    android:gravity="center" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivPreferredSettingAudioLangLeftArrow"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center"
                                    android:src="@drawable/arrow_setting_spin_l_d" />

                                <LinearLayout
                                    android:layout_width="230dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvPreferredSettingAudioLangSelect"
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:gravity="center"
                                        android:text="  ✓  "
                                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:id="@+id/tvPreferredSettingAudioLang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:gravity="center"
                                        android:text="@string/text_Chinese"
                                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                                        android:textSize="16dp" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/tvPreferredSettingAudioLangRightArrow"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center"
                                    android:src="@drawable/arrow_setting_spin_r_d" />
                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                    <!-- 1-2 end -->
                </LinearLayout>
                <!-- 1 end -->

                <!-- 2 begin -->
                <LinearLayout
                    android:id="@+id/llPreferredSettingSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:gravity="top|right"
                    android:orientation="horizontal">

                    <!-- 2-1 begin -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:maxWidth="87dp"
                            android:text="@string/preferred_setting_subtitle"
                            android:textColor="@color/colorWhiteOpacity50"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <!-- 2-1 end -->

                    <!-- 2-2 begin -->
                    <LinearLayout
                        android:layout_width="283dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="top|right"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="283dp"
                            android:layout_height="36dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/btnPreferredSettingSubtitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_item2"
                                    android:gravity="center" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivPreferredSettingSubtitleLeftArrow"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center"
                                    android:src="@drawable/arrow_setting_spin_l_d" />

                                <LinearLayout
                                    android:layout_width="230dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvPreferredSettingSubtitleSelect"
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:layout_marginTop="0dp"
                                        android:gravity="center"
                                        android:text="  ✓  "
                                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:id="@+id/tvPreferredSettingSubtitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:layout_marginTop="0dp"
                                        android:gravity="center"
                                        android:text="@string/text_Chinese"
                                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                                        android:textSize="16dp" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/ivPreferredSettingSubtitleRightArrow"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center"
                                    android:src="@drawable/arrow_setting_spin_r_d" />
                            </LinearLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                    <!-- 2-2 end -->
                </LinearLayout>
                <!-- 2 end -->

                <!-- 3 begin -->
                <LinearLayout
                    android:id="@+id/llPreferredSettingLang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:gravity="top|right"
                    android:orientation="horizontal">

                    <!-- 3-1 begin -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top|right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:maxWidth="87dp"
                            android:text="@string/preferred_setting_global_lang"
                            android:textColor="@color/colorWhiteOpacity50"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <!-- 3-1 end -->

                    <!-- 3-2 begin -->
                    <LinearLayout
                        android:layout_width="283dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:gravity="top|right"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="283dp"
                            android:layout_height="36dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/btnPreferredSettingLang"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/button_item2"
                                    android:gravity="center" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivPreferredSettingLangLeftArrow"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="center"
                                    android:src="@drawable/arrow_setting_spin_l_d" />

                                <LinearLayout
                                    android:layout_width="230dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvPreferredSettingLangSelect"
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:gravity="center"
                                        android:text="  ✓  "
                                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:id="@+id/tvPreferredSettingLang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="36dp"
                                        android:gravity="center"
                                        android:text="@string/text_Chinese"
                                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                                        android:textSize="16dp" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/ivPreferredSettingLangRightArrow"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginRight="12dp"
                                    android:gravity="center"
                                    android:src="@drawable/arrow_setting_spin_r_d" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <!-- 3-2 end -->
                </LinearLayout>
                <!-- 3 end  -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="#ffffff">

                <Button
                    android:id="@+id/btnPreferredSettingSave"
                    android:layout_width="125dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_item2"
                    android:drawablePadding="20dp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/state_selected_white_normal_b3ffffff"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btnPreferredSettingCancel"
                    android:layout_width="125dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_item2"
                    android:checked="true"
                    android:drawablePadding="20dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/state_selected_white_normal_b3ffffff"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
