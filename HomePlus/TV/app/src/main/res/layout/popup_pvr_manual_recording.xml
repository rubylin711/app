<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgd_pvrhomeplus">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/pvr_manual_recording_title"
        android:textColor="@color/colorWhiteOpacity75"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlPvrManualMain"
        android:layout_width="550dp"
        android:layout_height="415dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="73dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rlPvrManualTopBar"
            android:layout_width="805dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorWhiteOpacity40" />

            <LinearLayout
                android:layout_width="805dp"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="275dp"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnPvrManualStep1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:gravity="center"
                        android:textColor="#ffffff" />

                    <LinearLayout
                        android:id="@+id/llPvrManualStep1Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPvrManualStep1First"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pvr_manual_recording_step"
                            android:textColor="@color/state_selected_white_normal_4d9fb8cb"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPvrManualStep1Second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="1 "
                            android:textColor="@color/state_selected_white_normal_4d9fb8cb"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvPvrManualStep1Third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pvr_manual_recording_select_channel"
                            android:textColor="@color/state_selected_white_normal_4dffffff"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPvrManualStep1Line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="#ffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="275dp"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnPvrManualStep2"
                        android:layout_width="275dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:gravity="center"
                        android:textColor="#ffffff" />

                    <LinearLayout
                        android:id="@+id/llPvrManualStep2Title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPvrManualStep2First"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pvr_manual_recording_step"
                            android:textColor="@color/state_selected_white_normal_4d9fb8cb"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPvrManualStep2Second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="2 "
                            android:textColor="@color/state_selected_white_normal_4d9fb8cb"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvPvrManualStep2Third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pvr_manual_recording_set_record_mode"
                            android:textColor="@color/state_selected_white_normal_4dffffff"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPvrManualStep2Line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="#ffffff" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <include
            android:id="@+id/include_clPvrManualStep1"
            layout="@layout/layout_pvr_manual_step1"
            android:layout_width="550dp"
            android:layout_height="415dp"
            android:layout_below="@+id/rlPvrManualTopBar"
            android:visibility="gone" />

        <include
            android:id="@+id/include_llPvrManualStep2"
            layout="@layout/layout_pvr_manual_step2"
            android:layout_width="550dp"
            android:layout_height="415dp"
            android:layout_below="@+id/rlPvrManualTopBar"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorWhiteOpacity40" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPvrManualLiveChannel"
        android:layout_width="215dp"
        android:layout_height="410dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="#17161a"
        app:layout_constraintStart_toEndOf="@+id/rlPvrManualMain"
        app:layout_constraintTop_toTopOf="@+id/rlPvrManualMain">

        <android.media.tv.TvView
            android:id="@+id/pvrManualTvView"
            android:layout_width="165dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPvrManualTvFrameBlock"
            android:layout_width="165dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:src="@drawable/iframe_lockedchannel_534_x_301"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llPvrManualChannelInfo"
            android:layout_width="165dp"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pvrManualTvView">

            <TextView
                android:id="@+id/tvPvrManualChannelNumber"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="017"
                android:textColor="@color/colorGold2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvPvrManualChannelName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:maxWidth="135dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="Channel Name"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPvrManualProgramName"
            android:layout_width="165dp"
            android:layout_height="42.5dp"
            android:layout_marginTop="6.5dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="2"
            android:text="Program Name"
            android:textColor="@color/colorScrollBarGray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPvrManualChannelInfo" />

        <ProgressBar
            android:id="@+id/pbPvrManualProgram"
            style="@style/progress_channel"
            android:layout_width="165dp"
            android:layout_height="2dp"
            android:layout_marginTop="8.5dp"
            android:progressTint="@color/corporateColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPvrManualProgramName" />

        <TextView
            android:id="@+id/tvPvrManualProgramStartEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="10:00-10:45"
            android:textColor="@color/colorB2b2b2Opacity50"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/pbPvrManualProgram"
            app:layout_constraintTop_toBottomOf="@+id/pbPvrManualProgram" />

        <Button
            android:id="@+id/btnPvrManualConfirm"
            android:layout_width="165dp"
            android:layout_height="37dp"
            android:layout_marginTop="303dp"
            android:background="@drawable/button_item2"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="@string/ok"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnPvrManualCancel"
            android:layout_width="165dp"
            android:layout_height="37dp"
            android:layout_marginTop="348dp"
            android:background="@drawable/button_item2"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="@string/cancel"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/clPvrManualLiveChannel"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/clPvrManualLiveChannel"
        app:layout_constraintTop_toBottomOf="@+id/clPvrManualLiveChannel">

        <LinearLayout
            android:id="@+id/llPvrManualUnlockAll"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/shape_round_10_blue_3fa7fe"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:text="@string/unlock_all"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPvrManualShowSchedule"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/shape_round_10_red_ea4e4f"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:text="@string/recording_schedule"
                android:textColor="@color/colorWhiteOpacity70"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/include_clPvrManualSuccess"
        layout="@layout/layout_pvr_manual_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>