<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rlMiniEpgDescription"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/sh_miniepg_b_500_h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMiniEpgDescriptionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="063"
                android:textColor="@color/colorGold"
                android:textSize="21dp" />

            <ImageView
                android:id="@+id/ivMiniEpgDescriptionStar"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_ch_favorite"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvMiniEpgDescriptionChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="DescriptionChannelName"
                android:textColor="@color/white_description"
                android:textSize="21dp" />

            <ImageView
                android:id="@+id/ivMiniEpgDescriptionQuality"
                android:layout_width="22dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_miniguide_hd"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMiniEpgDescriptionProgramName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="DescriptionProgramName"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/ivMiniEpgDescriptionRating"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/rating_0" />

            <TextView
                android:id="@+id/tvMiniEpgDescriptionBilingual"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/stroke_white"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/bilingual"
                android:textColor="@color/colorWhiteOpacity50"
                android:textSize="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMiniEpgDescriptionProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMiniEpgDescriptionProgramStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white_time"
                android:text="00:00"
                android:textSize="12dp" />

            <ProgressBar
                android:id="@+id/pbMiniEpgDescriptionProgram"
                style="@style/progress_channel"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginLeft="5dp"
                android:progressTint="@color/corporateColor"
                android:progressBackgroundTint="@color/progress_gary" />

            <TextView
                android:id="@+id/tvMiniEpgDescriptionProgramEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/white_time"
                android:text="23:59"
                android:textSize="12dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="550dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp">

            <ScrollView
                android:id="@+id/svMiniEpgDescription"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbarSize="1.5dp"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:scrollbarThumbVertical="@drawable/description_scrollbar_thumb"
                android:scrollbarTrackVertical="@drawable/description_scrollbar_track"
                android:fadeScrollbars="false">

                <TextView
                    android:id="@+id/tvMiniEpgDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:textColor="@color/white_description"
                    android:textSize="16dp" />
            </ScrollView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="195dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/corporateColor"
                android:gravity="center"
                android:text="@string/close"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>