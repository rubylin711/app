<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="450dp"
        android:layout_height="405dp"
        android:background="#34363c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="@string/video_aduio_title"
            android:textColor="#ffffff"
            android:textSize="23dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_aduio_subtitle"
            android:textColor="#ff8da4b9"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="25dp"
            android:background="@color/colorWhiteOpacity10"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="top|right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="@string/video_aduio_aspectratio"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/video_aduio_resolution"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/video_aduio_audiolang"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/video_aduio_hdmicec"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/video_aduio_hdcp"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="top|right"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnAspectRatio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_item2"
                            android:gravity="center" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAspectRatioSelectArrowLeft"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:src="@drawable/arrow_setting_spin_l_d" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAspectRatioSelect"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:text="  ✓  "
                                android:textColor="#ffffff"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/tvAspectRatio"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:text="@string/settings_av_setting_auto"
                                android:textColor="#ffffff"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAspectRatioSelectArrowRight"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:src="@drawable/arrow_setting_spin_r_d" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout><androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
			            android:id="@+id/btnResolution"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_item2"
                        android:gravity="center" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivResolutionSelectArrowLeft"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:gravity="center"
                            android:src="@drawable/arrow_setting_spin_l_d" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
			                android:id="@+id/tvResolutionSelect"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:text="  ✓  "
                            android:textColor="#ffffff"
                            android:textSize="16dp" />

                        <TextView
			                android:id="@+id/tvResolution"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:text="480i"
                            android:textColor="#ffffff"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivResolutionSelectArrowRight"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:gravity="center"
                            android:src="@drawable/arrow_setting_spin_r_d" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnAudio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_item2"
                            android:gravity="center" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAudioArrowLeft"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:src="@drawable/arrow_setting_spin_l_d" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAudioSelect"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:text="  ✓  "
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tvAudio"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:text="中文"
                                android:textColor="#ffffff"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAudioArrowRight"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:gravity="center"
                                android:src="@drawable/arrow_setting_spin_r_d" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <RadioGroup
                    android:id="@+id/mRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtnCECEnable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_item2"
                        android:buttonTint="#ffffff"
                        android:checked="true"
                        android:drawablePadding="20dp"
                        android:paddingLeft="0dp"
                        android:text="@string/video_audio_cecon"
                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:id="@+id/rbtnCECDisable"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_item2"
                        android:buttonTint="#ffffff"
                        android:text="@string/video_audio_cecoff"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/mRadioGroupHDCP"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtnHDCPAuto"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_item2"
                        android:buttonTint="#ffffff"
                        android:checked="true"
                        android:drawablePadding="20dp"
                        android:paddingLeft="0dp"
                        android:text="@string/settings_av_setting_auto"
                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:id="@+id/rbtnHDCP14"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_item2"
                        android:buttonTint="#ffffff"
                        android:text="1.4"
                        android:textColor="@color/state_selected_white_normal_b3ffffff"
                        android:textSize="16dp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:text=""
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="125dp"
                android:layout_height="36dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_item2"
                android:checked="true"
                android:drawablePadding="20dp"
                android:paddingLeft="0dp"
                android:text="@string/workorder_inquiry_save"
                android:textColor="@color/state_selected_white_normal_b3ffffff"
                android:textAllCaps="false"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="125dp"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_item2"
                android:checked="true"
                android:drawablePadding="20dp"
                android:paddingLeft="0dp"
                android:text="@string/workorder_inquiry_cancel"
                android:textColor="@color/state_selected_white_normal_b3ffffff"
                android:textAllCaps="false"
                android:textSize="16dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
