<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llParentalControlLocked"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="165dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/etParentalPin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@drawable/edittext_bg"
                android:cursorVisible="false"
                android:maxLength="4"
                android:textColor="#00000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvPin1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/password_off"
                    android:textColor="@color/colorWhiteOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPin2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/password_off"
                    android:textColor="@color/colorWhiteOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPin3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/password_off"
                    android:textColor="@color/colorWhiteOpacity80"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvPin4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/password_off"
                    android:textColor="@color/colorWhiteOpacity80"
                    android:textSize="16dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvEnterPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/settings_parental_control_pin"
            android:textColor="@color/colorWhiteOpacity80"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvEnterPinHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_system_pindel"
            android:textColor="@color/colorWhiteOpacity40"
            android:textSize="15dp" />
    </LinearLayout>

    <include
        android:id="@+id/llParentalControlUnlock"
        layout="@layout/settings_parental_control_unlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>