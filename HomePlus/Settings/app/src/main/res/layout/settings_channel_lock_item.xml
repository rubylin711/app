<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bg"
    android:layout_width="165dp"
    android:layout_height="35dp"
    android:gravity="center"
    android:background="#484d56"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_bg2"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:background="@color/colorTabSelect"
        android:visibility="gone"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/item_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:buttonTint="@color/colorWhiteOpacity50"
            android:gravity="center"
            android:focusable="false" />


        <TextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="1000"
            android:textColor="@color/state_selected_white_normal_b3ebca8c"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:maxWidth="85dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="Colorbar"
            android:textColor="@color/state_selected_white_normal_white70"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>