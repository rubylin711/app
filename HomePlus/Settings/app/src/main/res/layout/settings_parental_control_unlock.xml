<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parental_locked_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <Button
                android:id="@+id/btn1"
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_item2"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="@string/settings_parental_rating"
                android:textColor="@color/state_selected_white_normal_white70"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:layout_marginLeft="207dp"
                android:background="@drawable/button_item2"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="@string/settings_parental_channel"
                android:textColor="@color/state_selected_white_normal_white70"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:layout_marginLeft="388dp"
                android:background="@drawable/button_item2"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="@string/settings_parental_worktime"
                android:textColor="@color/state_selected_white_normal_white70"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:layout_marginLeft="569dp"
                android:background="@drawable/button_item2"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="@string/settings_parental_changepin"
                android:textColor="@color/state_selected_white_normal_white70"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/parental_locked_layout2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <Button
                android:id="@+id/btn5"
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_item2"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="@string/settings_parental_adult_show"
                android:textColor="@color/state_selected_white_normal_white70"
                android:textSize="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>