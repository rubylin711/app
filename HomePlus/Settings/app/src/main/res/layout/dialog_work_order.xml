<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="475dp"
        android:layout_height="395dp"
        android:background="#34363c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_WorkInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
	    android:text="@string/work_order_info"
            android:textColor="#ffffff"
            android:textSize="23dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_WorkInfo2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="35dp"
            android:background="@color/colorWhiteOpacity10"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="top|right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center"
		            android:text="@string/return_value"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
		            android:text="@string/work_msg"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
		            android:text="@string/company_id"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
		    android:text="@string/work_order_full_number"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="@string/install_name"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="@string/bp_name"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="@string/worker_id"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="@string/mobile_phone"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="@string/cm_mode"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="top|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorWhiteOpacity50"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="15dp"
                android:gravity="top|left"
                android:orientation="vertical">

                <TextView
		    android:id="@+id/textView_RetCode"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_RetMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_CrmId"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_CrmWorkOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_Crminstallname"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_CrmBpname"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_CrmWorker1"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_Mobilephone"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />

                <TextView
		    android:id="@+id/textView_CmMode"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorWhiteOpacity80"
		    android:singleLine="true"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="335dp"
            android:text=""
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnWorkOrderConfirm"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_item2"
                android:checked="true"
                android:drawablePadding="20dp"
                android:paddingLeft="0dp"
                android:text="@string/settings_confirm"
                android:textColor="@color/state_selected_white_normal_b3ffffff"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnWorkOrderChange"
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_item2"
                android:checked="true"
                android:drawablePadding="20dp"
                android:paddingLeft="0dp"
                android:text="@string/change_engineer"
                android:textColor="@color/state_selected_white_normal_b3ffffff"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnWorkOrderCancel"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_item2"
                android:checked="true"
                android:drawablePadding="20dp"
                android:paddingLeft="0dp"
                android:text="@string/workorder_inquiry_cancel"
                android:textColor="@color/state_selected_white_normal_b3ffffff"
                android:textSize="16dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
