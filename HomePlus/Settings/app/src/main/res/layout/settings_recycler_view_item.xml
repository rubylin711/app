<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_line_up"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhiteOpacity40" />

    <LinearLayout
        android:id="@+id/item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/settings_title_layout_bg_d"
        android:gravity="center|left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/settings_android"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/settings_android"
                android:textColor="#ff8da4b9"
                android:textSize="15dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/settings_android"
                android:textColor="@color/colorGoldOpacity70"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/item_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/arrow_down"
                android:text="Reset"
                android:textColor="#ffffff"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <com.prime.homeplus.settings.ExpandLayout
        android:id="@+id/item_expandable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <TextView
        android:id="@+id/item_line_down"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorWhiteOpacity40" />
</LinearLayout>