<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff000000">

    <androidx.viewpager.widget.ViewPager
        android:id="@id/vpTutorial"
        android:layout_width="fill_parent"
        android:layout_height="387dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llBottomHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vpTutorial">

        <Button
            android:id="@+id/btnTutorialSkip"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_marginTop="28dp"
            android:background="@color/colorTabSelect"
            android:text="@string/tutorial_skip"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            >

        </Button>

        <LinearLayout
            android:id="@+id/llIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <!-- ImageView
                android:id="@+id/imgIndicator1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/circle_normal" />

            <ImageView
                android:id="@+id/imgIndicator2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/circle_normal" />

            <ImageView
                android:id="@+id/imgIndicator3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/circle_normal" />

            <ImageView
                android:id="@+id/imgIndicator4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/circle_normal" />

            <ImageView
                android:id="@+id/imgIndicator5"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/circle_normal" /-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="81dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vpTutorial">

        <ImageView
            android:id="@+id/ivDirection"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/colorkey_direction_right">
        </ImageView>

        <TextView
            android:id="@+id/tvDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/tutorial_next"
            android:textSize="12dp"
            android:textColor="@color/colorTextNotSelect">
        </TextView>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/key_ok">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="71dp"
            android:text="Select"
            android:textSize="12dp"
            android:textColor="@color/colorTextNotSelect">
        </TextView>
    </LinearLayout>

    <include
        android:id="@+id/rlTutorialConfirmPopup"
        layout="@layout/tutorial_confirm_popup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </include>

</androidx.constraintlayout.widget.ConstraintLayout>