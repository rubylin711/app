<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_bg"
    android:layout_width="match_parent"
    android:layout_height="39dp"
    android:gravity="center|left"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_date_ll"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="日期"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="180dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="郵件名稱"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/item_type_ll">

        <TextView
            android:id="@+id/item_read"
            android:layout_width="27dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:text="@string/new_mail"
            android:background="#E4AF50"
            android:textColor="#26282d"
            android:layout_marginRight="0dp"
            android:textSize="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_type_ll"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/item_id_ll">

        <TextView
            android:id="@+id/item_importance"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="重要性"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_id_ll"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="編號"
            android:textColor="@color/state_selected_white_normal_b3ffffff"
            android:textSize="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>