<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMain"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_1920_w">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clList"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#171719"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clListTitle"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:gravity="left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 左上角背景圖 -->
            <ImageView
                android:layout_width="118dp"
                android:layout_height="118dp"
                android:translationX="0dp"
                android:translationY="0dp"
                android:src="@drawable/bg_member_title_set"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="25dp"
                android:text="@string/membercenter"
                android:textColor="@color/colorTextTitle"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="80dp"
                android:gravity="left|center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivWeather"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_twoway_time" />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="205dp"
                    android:layout_height="20dp"
                    android:paddingLeft="3dp"
                    android:gravity="center|left"
                    android:text="16.18 (週四) 16:42"
                    android:textColor="@color/colorTextTitle"
                    android:textSize="12dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout >

        <ListView
            android:id="@+id/lvMembers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:listSelector="@drawable/button_item2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/clListTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clListTitle"
            app:layout_constraintVertical_bias="0.0"
            android:divider="@null" />

    </androidx.constraintlayout.widget.ConstraintLayout >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="250dp"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.Guideline>

    <include
        android:id="@+id/memberMember"
        layout="@layout/member_member"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberChannelList"
        layout="@layout/member_channel_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberSubscription"
        layout="@layout/member_subscription"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberVODPoint"
        layout="@layout/member_vod_point"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberTerms"
        layout="@layout/member_terms"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberMail"
        layout="@layout/member_mail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberQuestion"
        layout="@layout/member_question"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberCrossScreen"
        layout="@layout/member_cross_screen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberSubscriptionPayment"
        layout="@layout/member_subscription_payment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberSubscriptionBillingHistory"
        layout="@layout/member_subscription_billing_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/memberQuestionQuestion"
        layout="@layout/member_question_question"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/clList"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>